namespace NStrm.NPackager.NFb;

table TSegment {
    Path:string;
    Duration:uint64;
    Offset:uint64;
}

table TTrack {
    Id:uint32;
    Segments:[TSegment];
    Duration:uint64;
    Params:string;
}

table TTrackSet {
    Language:string;
    Label:string;
    Tracks:[TTrack];
}

table TDescription {
    VideoSets:[TTrackSet];
    AudioSets:[TTrackSet];
    SegmentDuration:uint64;
    WithDRM:bool;
}

root_type TDescription;
