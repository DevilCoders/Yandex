{
    "meta": {
        "name": "yandex-vcs-api",
        "maintainer": "akastornov@yandex-team.ru",
        "version": "{revision}",
        "description": "Vcs api baseline"
    },
    "build": {
        "targets": [
            "aapi/server/bin",
            "aapi/client/bin",
            "aapi/convert",
            "aapi/hg_convert/robot"
        ]
    },
    "data": [
        {
            "source": {
                "path": "aapi/server/bin/proxy",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "archive": "/linux/proxy.tgz"
            }
        },
        {
            "source": {
                "path": "aapi/convert/convert",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "archive": "/linux/converter.tgz"
            }
        },
        {
            "source": {
                "path": "aapi/hg_convert/robot",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "archive": "/linux/hg_robot.tgz"
            }
        },
        {
            "source": {
                "path": "aapi/client/bin",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "archive": "/linux/client.tgz"
            }
        },
        {
            "source": {
                "path": "aapi/deploy",
                "type": "ARCADIA",
                "files": ["*"]
            },
            "destination": {
                "path": "/plugin/"
            }
        }
    ]
}
