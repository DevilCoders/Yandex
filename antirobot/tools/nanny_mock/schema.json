{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "additionalProperties":true,
   "properties":{
      "notify_email":{
         "properties":{
            "cc":{
               "items":{
                  "type":"string"
               },
               "type":"array"
            },
            "to":{
               "items":{
                  "type":"string"
               },
               "type":"array"
            }
         },
         "type":"object"
      },
      "release_author":{
         "title":"Release author",
         "type":"string"
      },
      "release_comments":{
         "oneOf":[
            {
               "type":"string"
            },
            {
               "type":"null"
            }
         ],
         "title":"Release comments"
      },
      "release_resources":{
         "items":{
            "additionalProperties":true,
            "properties":{
               "type":{
                  "type":"string"
               }
            },
            "required":[
               "type"
            ],
            "type":"object"
         },
         "type":"array"
      },
      "release_status":{
         "title":"Release status",
         "type":"string"
      },
      "release_subject":{
         "oneOf":[
            {
               "type":"string"
            },
            {
               "type":"null"
            }
         ],
         "title":"Release subject"
      },
      "startrek_ticket_ids":{
         "items":{
            "type":"string"
         },
         "type":"array"
      },
      "task_description":{
         "title":"Task description",
         "type":"string"
      },
      "task_id":{
         "title":"Task id",
         "type":"integer"
      },
      "task_type":{
         "maxLength":128,
         "minLength":1,
         "title":"Task type",
         "type":"string"
      },
      "timestamp":{
         "format":"date-time",
         "title":"Timestamp",
         "type":"string"
      }
   },
   "required":[
      "timestamp",
      "task_type",
      "task_id",
      "release_author",
      "release_status"
   ],
   "title":"Sandbox Release",
   "type":"object"
}
