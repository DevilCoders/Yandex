#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export VIRTUAL_ENV="debian/venv"


%:
	dh $@

override_dh_auto_build:
	debian/build-venv

override_dh_auto_install:
	mkdir -p debian/yandex-media-py-log-processor/usr/share/yandex-media-py-log-processor/bin
	mkdir -p debian/yandex-media-py-log-processor/etc/yandex-media-py-log-processor
	mkdir -p debian/yandex-media-py-log-processor/etc/monrun/conf.d
	cp -r debian/venv debian/yandex-media-py-log-processor/usr/share/yandex-media-py-log-processor/venv
	cp -r config/* debian/yandex-media-py-log-processor/etc/yandex-media-py-log-processor/
	rm -r debian/venv

override_dh_auto_clean:
	dh_auto_clean
