use Ubic::Service::SimpleDaemon;
my $service = Ubic::Service::SimpleDaemon->new(
    name => 'lxd-media-agent',
    auto_start => 1,
    ubic_log => '/var/log/lxd-media-agent/ubic.log',
    stdout => '/var/log/lxd-media-agent/ubic-stdout.log',
    stderr => '/var/log/lxd-media-agent/ubic-stderr.log',
    bin => '/usr/bin/uwsgi --ini /usr/lib/lxd-agent/uwsgi.ini',
);
