{%- set env = grains['yandex-environment'] -%}
{%- set fqdn = grains['conductor']['fqdn'] -%}
<nscfg_old>
    <enabled>yes</enabled>
    {%- if env == 'testing' %}
    <http_source>http://nscfg.mdst.yandex.net:9532/all</http_source>
    {%- else %}
    <http_source>http://nscfg.mds.yandex.net:9532/all</http_source>
    {%- endif %}
    <warning_time_sec>1200</warning_time_sec>
    <cache_path>/usr/share/libmastermind/mm_ns_settings.cache</cache_path>
    <update_interval_sec>60</update_interval_sec>
    <http_request_timeout_msec>10000</http_request_timeout_msec>
</nscfg_old>
