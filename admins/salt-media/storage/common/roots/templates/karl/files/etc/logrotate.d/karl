/var/log/karl/*.log
{
    daily
    maxsize 5G
    missingok
    rotate 14
    compress
    compresscmd /usr/bin/ionice
    compressoptions -c3 /usr/bin/pzstd -1 -p2
    compressext .zst
    delaycompress
    notifempty
    dateext
    dateformat .%Y%m%d-%s
    nocreate
    postrotate
        /usr/bin/killall -HUP karl
    endscript
}
