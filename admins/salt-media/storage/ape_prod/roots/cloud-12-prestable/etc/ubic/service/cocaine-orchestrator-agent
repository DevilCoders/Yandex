use Ubic::Service::SimpleDaemon;
my $service = Ubic::Service::SimpleDaemon->new(
    name => 'cocaine-orchestrator-agent',
    daemon_user => 'cocaine',
    auto_start => 0,
    ubic_log => '/var/log/ubic/cocaine-orchestrator-agent/ubic.log',
    stdout => '/var/log/ubic/cocaine-orchestrator-agent/stdout.log',
    stderr => '/var/log/ubic/cocaine-orchestrator-agent/stderr.log',
    bin => '/usr/bin/python /usr/lib/python2.7/dist-packages/cocaine/orchestrator/agent.py --daemonize --debug --dryrun --datacenter {{ grains['conductor']['root_datacenter'] }}',
);
