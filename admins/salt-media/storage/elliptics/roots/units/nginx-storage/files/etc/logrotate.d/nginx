/var/log/nginx/access.log /var/log/nginx/error.log /var/log/nginx/tskv.log /var/log/nginx/downloader/access.log /var/log/nginx/downloader/error.log {
    daily
    missingok
    rotate 14
    compress
    compresscmd /usr/bin/ionice
    compressoptions -c3 /usr/bin/pzstd -8 -p4
    compressext .zst
    maxsize 3G
    notifempty
    create 644 root adm
    dateext
    dateformat .%Y%m%d-%s
    sharedscripts
    postrotate
        /etc/init.d/syslog-ng reload
        kill -USR1 `cat /var/run/nginx.pid`
    endscript
}
