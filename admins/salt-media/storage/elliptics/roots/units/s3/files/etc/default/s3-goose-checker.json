{
  "services": {
    "proxy": {
      "port": 3355
    },
    "private": {
      "port": 3399
    },
    "cleanup": {
      "port": 3355
    },
    "maintenance": {
      "port": 3377
    },
    "billing": {
      "port": 4442
    },
    "server_logs": {
      "port": 4442
    },
    "background": {
      "port": 4455
    }
  },
  "checks": {
    "alive": {
      "type": "alive"
    },
    "pg": {
      "type": "postgres",
      "skip_pool_exhausted": true,
      "skip_unavailable_url": true,
      "warn": "5s",
      "crit": "30s"
    },
    "pg_pool": {
      "type": "pg_pool",
      "skip_unavailable_url": true
    },
    "lc": {
      "type": "schedule",
      "event": "LifecycleScheduler,BucketsDeleteRepair,SyncABCRoles",
      "warn": "1h",
      "crit": "2h"
    },
    "maintenance": {
      "type": "schedule",
      "event": "ScheduleBucketsMaintenance,ScheduleChunksMaintenance,ScheduleObjectsMaintenance,ProcessObjectsMaintenance",
      "warn": "24h",
      "crit": "48h"
    },
    "cleanup": {
      "type": "schedule",
      "event": "Cleanup,CleanupByBucket",
      "warn": "100m",
      "crit": "120m"
    },
    "billing": {
      "type": "schedule",
      "event": "UpdateTasks,ProcessTasks",
      "warn": "90m",
      "crit": "90m"
    },
    "billing_queue": {
      "type":"billing",
      "warn":"1h",
      "crit":"2h"
    },    
    "srvlogs": {
      "type": "schedule",
      "event": "CreateServerLogsTask,ExecuteServerLogsTask",
      "warn": "90m",
      "crit": "90m"
    },
    "sqs": {
        "type": "sqs",
        "event": "lifecycle,background",
        "warn": "1m",
        "crit": "1m"
    }
  }
}

