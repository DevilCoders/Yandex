<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="false" default-autowire="byName">

    <context:annotation-config/>

    <bean id="tsvProcessor" class="ru.yandex.market.clickphite.dictionary.processors.TsvDictionaryProcessor"/>


    <bean name="host2DcDictionaryLoader" class="ru.yandex.market.clickphite.dictionary.loaders.host2dc.Host2DcDictionaryLoader">
        <property name="golemAllHostWithDcUrl" value="${golem.api.all-hosts-with-dc}"/>
        <property name="conductorDataCentersUrl" value="${conductor.api.dc-url}"/>
        <property name="conductorDataCenterHostsUrl" value="${conductor.api.dc-to-host-url}"/>
    </bean>

    <util:list id="dictionaries" value-type="ru.yandex.market.clickphite.dictionary.DictionaryLoadTask">
        <bean class="ru.yandex.market.clickphite.dictionary.DictionaryLoadTask">
            <property name="dictionary">
                <bean class="ru.yandex.market.clickphite.dictionary.dicts.HostToDcDictionary"/>
            </property>
            <property name="loader" ref="host2DcDictionaryLoader"/>
            <property name="processor" ref="tsvProcessor"/>
        </bean>
    </util:list>
</beans>
