<global>
    config_format = mds27
    root_dir = /srv/storage
    log_dir = /var/log/elliptics
    pidfile_dir = /var/lib/ubic

    user = root   #this is hardcode now
    #user = www-data

    base_port = 1024
    listen_family = 10
    enable_fastbone = 0

    log_level = error
    ulimits = ulimit -l unlimited; ulimit -n 200000; ulimit -c unlimited
    max_disks = 160
    max_backends = 100

    start_timeout_step = 0.5
    start_timeout_try = 50
    stop_timeout = 300
    flags = 4
    enable_noroute = 1
    cache_size = none
    max_cache_disks = 1

    {% set federation = pillar.get('mds_federation', None) -%}
    {% if federation and federation != 1 -%}
    auth_cookie = {{ federation }}-test-storage-federations
    master_nodes = /etc/elliptics/masters.id-federation-{{ federation }}
    {%- else %}
    auth_cookie = media_test_elliptics_storage
    {%- endif %}
    static_pool = 1
</global>

<tls>
    ca_path = /etc/elliptics/ssl/
    key_path = /etc/elliptics/ssl/storage.key
    cert_path = /etc/elliptics/ssl/storage.crt
    support = 1
    # https://st.yandex-team.ru/MDS-10296#5e68ed4dc1ba155f69692267
    debug_mode = 1
</tls>

<features>
    independent_protocol = 1
    disable_old_api = 1
</features>

<extend_check>
    enabled = 1
    wait_timeout = 5
    do_stack_trace=0
</extend_check>

<tskv>
   enable=1
   <small>
     enable=1
   </small>
</tskv>

<top>
    enable=1
    top_length=1000
    events_size=1000000
    period_in_seconds=50
</top>

<handystats>
    enable=1
    handystats_config=/etc/elliptics/handystats.json
</handystats>

<backend>
    # ELL-931
    <io_pools>
        <defaults>
            nonblocking_io_thread_num = 5
            io_thread_num = 5
        </defaults>
    </io_pools>

    net_thread_num = 10
    # ELL-931
    {%- set thread_num = grains.get('num_cpus', 16) - 4 %}
    io_thread_num = {{ thread_num | int }}
    nonblocking_io_thread_num = {{ (thread_num / 2) | int }}

    wait_timeout = 10
    check_timeout = 100
    queue_timeout = 3
    send_limit = 50
    lifo = 1

    #Variable for server-side scripting
    #srw_binary = /usr/bin/srw_worker
    #param m.b. missing
    {% if grains['fqdn'] in ['s01vla.mdst.yandex.net'] -%}
    type = blob
    {%- else -%}
    type = blob
    {%- endif %}
    <blob>
            size = 50G
            records_in_blob = 1000000

            #l2hash (64) + autosort_index (2048) + use_views (4096)
            flags = 6208
            # ELL-905
            single_pass_file_size_threshold = 512

            sync = 4
            cache_size = 0

            defrag_timeout = 3600
            defrag_percentage = 5

            # MDS-10091
            index_block_size = 512
            index_block_bloom_length = 8192 # index_block_size * 16
    </blob>
</backend>
