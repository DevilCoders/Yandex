/var/log/fastcgi/err.mobile.log
{
	size 100M
	missingok
	copytruncate
	rotate 7
	compress
	delaycompress
    dateext
    dateformat .%Y%m%d-%s
	notifempty
}

/var/log/fastcgi/mobile.log
{
	size 100M
	missingok
	rotate 7
	compress
	delaycompress
	notifempty
    dateext
    dateformat .%Y%m%d-%s
	sharedscripts
	postrotate
		test -e /etc/init.d/syslog-ng && /etc/init.d/syslog-ng reload >/dev/null
	endscript
}
