/var/log/fastcgi/err.face-detector.log
{
	size 100M
	missingok
	copytruncate
	rotate 7
	compress
    dateext
    dateformat .%Y%m%d-%s
	delaycompress
	notifempty
}

/var/log/fastcgi/face-detector.log
{
	size 100M
	missingok
	rotate 7
	compress
	delaycompress
    dateext
    dateformat .%Y%m%d-%s
	notifempty
	sharedscripts
	postrotate
		test -e /etc/init.d/syslog-ng && /etc/init.d/syslog-ng reload >/dev/null
	endscript
}
