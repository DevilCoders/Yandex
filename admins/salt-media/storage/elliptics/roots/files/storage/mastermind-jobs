    rotate 300
}

/var/log/gc/output.tskv
{
    maxsize 512M
    notifempty
    delaycompress
    compress
    compresscmd /usr/bin/pzstd
    compressoptions -8 -p1
    compressext .zst
    dateext
    dateformat -%Y%m%d-%s
    missingok
    rotate 300
}
