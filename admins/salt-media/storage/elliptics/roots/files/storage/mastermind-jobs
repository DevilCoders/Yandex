/var/log/mastermind/jobs/*/*/*.log
{
    maxsize 512M
    notifempty
    compress
    dateext
    dateformat -%Y%m%d-%s
    compresscmd /usr/bin/ionice
    compressoptions -c3 /usr/bin/pzstd -8 -p4
    compressext .zst
    missingok
    rotate 300
}

/var/log/mastermind/jobs/*/*/*/*.log
{
    maxsize 512M
    notifempty
    compress
    dateext
    dateformat -%Y%m%d-%s
    compresscmd /usr/bin/ionice
    compressoptions -c3 /usr/bin/pzstd -8 -p4
    compressext .zst
