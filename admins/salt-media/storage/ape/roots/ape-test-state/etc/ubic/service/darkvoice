use Ubic::Service::SimpleDaemon;
my $service = Ubic::Service::SimpleDaemon->new(
    name => 'darkvoice',
    bin => 'darkvoice --config=/etc/darkvoice/darkvoice.yaml',
    auto_start => 1,
    ubic_log => '/var/log/ubic/darkvoice-ubic.log',
    stdout => '/var/log/ubic/darkvoice-stdout.log',
    stderr => '/var/log/ubic/darkvoice-stderr.log',
);

