{% set warn, crit = (0.005, 0.015) -%}
{
  "log_path": "/var/log/nginx/access.log",
  "depth_seconds": 60,
  "global_filter": {
    "include": [
      ".*"
    ],
    "exclude": [
      ".*ping.*"
    ]
  },
  "log_monitor_settings": [
    {
      "name": "499 rate",
      "filter": {
        "include": [
          ".*vhost=m\\.tv\\.yandex\\..*status=499.*"
        ],
        "exclude": [
        ]
      },
      "alert_configuration": {
        "type": "rate",
        "warning": {{warn}},
        "critical": {{crit}}
      }
    }
  ]
}

