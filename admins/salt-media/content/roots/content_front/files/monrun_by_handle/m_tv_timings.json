{% if yaenv in ['production', 'prestable'] -%}
{% set warn, crit = (1.6, 1.8) -%}
{% else -%}
{% set warn, crit = (1.6, 2.0) -%}
{% endif -%}
{
  "log_path": "/var/log/nginx/access.log",
  "depth_seconds": 60,
  "global_filter": {
    "include": [
      ".*"
    ],
    "exclude": [
      ".*ping.*"
    ]
  },
  "log_monitor_settings": [
    {
      "name": "percentile",
      "filter": {
        "include": [
          ".*vhost=m\\.tv\\.yandex\\..*status=200.*"
        ],
        "exclude": [
          ".*/\\d+/search.*"
        ]
      },
      "alert_configuration": {
        "type": "percentile",
        "percentile": 99,
        "warning": {{warn}},
        "critical": {{crit}}
      }
    }
  ]
}
