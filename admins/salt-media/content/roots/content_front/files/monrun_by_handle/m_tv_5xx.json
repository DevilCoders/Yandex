{
  "log_path": "/var/log/nginx/access.log",
  "depth_seconds": 60,
  "global_filter": {
    "include": [
      ".*"
    ],
    "exclude": [
      ".*ping.*"
    ]
  },
  "log_monitor_settings": [
    {
      "name": "5xx rate",
      "filter": {
        "include": [
          ".*vhost=m\\.tv\\.yandex\\..*status=5.*"
        ],
        "exclude": [
        ]
      },
      "alert_configuration": {
        "type": "rate",
        "warning": 0.005,
        "critical": 0.01
      }
    }
  ]
}

