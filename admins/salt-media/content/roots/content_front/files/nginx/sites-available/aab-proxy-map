map $http_user_agent $not_iphone_agent {
    "~.*iPhone.*Safari.*" "1";
    default "0";
}
map "$request_method:$not_iphone_agent:$http_user_agent:$http_cookie:$http_x_aab_proxy:$http_x_no_aab_proxy:$uri" $should_aab_proxy_get {
    "~GET:0:.*:.*tvoid=1.*:::(?:(?!\/api\/).)*$" "1";
    "~GET:sentry.*" "1";
    default "";
}

map "$request_method:$http_x_aab_http_check:$http_x_aab_proxy:$http_x_no_aab_proxy:$uri" $should_aab_proxy_post {
    "~POST:.+:::(?:(?!\/api\/).)*$" "1";
    default "";
}

map $host $loop_host {
    "~((?:.+\.)?tv\.yandex\.(?:ru|ua|by|kz|uz))$" "localhost";
    default "any.yandex.ru";
}
