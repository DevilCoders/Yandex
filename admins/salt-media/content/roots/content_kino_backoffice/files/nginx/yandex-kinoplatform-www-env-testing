server {
    include listen;

    server_name kino.test.yandex-team.ru;

    location / {
        return 301 https://kino.test.yandex-team.ru;
    }
}

server {
    include listen_ssl;

    server_name kino.test.yandex-team.ru;

    ssl_certificate ssl/kinoplatform.pem;
    ssl_certificate_key ssl/kinoplatform.pem;

    set $socket_name yandex-kinoplatform-www;
    set $root /usr/local/www5/yandex-kinoplatform-www;

    location ~* \.(gif|jpe?g|png|svg|css|js|txt|woff2?|ttf|otf|eot)$ {
        root $root;
    }

    include sites-available/yandex-kinoplatform-www;
}
