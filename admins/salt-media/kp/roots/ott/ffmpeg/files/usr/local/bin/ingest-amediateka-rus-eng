#! /bin/sh

for i in *.mp4; do mkdir -p DONE; ffmpeg -i "$i" -map 0:v -map 0:a -c:v copy -c:a:0 aac -ar 48000 -ab 256K -ac 2 -clev 1.414 -slev .5 \
-c:a:1 copy -metadata:s:v:0 language=rus -metadata:s:a:0 language=rus -metadata:s:a:1 language=eng \
-disposition:a:0 default -disposition:a:1 none -map_metadata -1 -map_chapters -1 DONE/"$i"; done
