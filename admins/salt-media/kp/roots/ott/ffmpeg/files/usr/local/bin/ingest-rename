#! /bin/sh

find . -name '*S0*E0*' | while read f; do mv "$f" "${f/S0/s0}"; done
find . -name '*s0*E0*' | while read f; do mv "$f" "${f/E0/e0}"; done

#шаблон нового названия
echo "введите шаблон нового названия, например, Title_coid12345"
read new_name
echo "введите кол-во языков, например, rus или rus_eng"
read lang
if [ -z "$lang" ]
then 
    for f02 in *.mp4; do mkdir -p DONE; mv $f02 DONE/${f02/*s0/"$new_name"_s0}; done
else
for f01 in *.mp4; do mv $f01 ${f01%.*}_$lang.mp4; done
for f02 in *.mp4; do mkdir -p DONE; mv $f02 DONE/${f02/*s0/"$new_name"_s0}; done
fi
