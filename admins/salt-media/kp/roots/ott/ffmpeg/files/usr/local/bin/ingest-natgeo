#! /bin/sh

for f in *.ts; do mkdir -p DONE;
ffmpeg -i "$f" -map 0:v -vcodec h264 -preset slow -profile:v high -level 5.1 -crf 15 -vf "yadif,scale=interl=1,format=pix_fmts=yuv420p" -map 0:a -acodec aac -ar 48000 -ab 256K -ac 2 -clev 1.414 -slev .5 -metadata:s:v:0 language=rus -metadata:s:a:0 language=rus -metadata:s:a:1 language=eng -map_metadata -1 -map_chapters -1 DONE/"${f%.*}".mp4; done
