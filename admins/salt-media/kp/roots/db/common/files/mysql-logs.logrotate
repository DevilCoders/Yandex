/var/log/mysql/mysql-error.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 640 mysql mysql
    copytruncate
}

/var/log/mysql/mysqld_watchdog.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 644 root root
    copytruncate
}

/var/log/mysql/mysql-slow.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 644 root root
    copytruncate
}
