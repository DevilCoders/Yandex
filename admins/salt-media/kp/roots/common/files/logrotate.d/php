/var/log/php/*.log
{
    rotate {{ rotate }}
    hourly
    missingok
    notifempty
    nocompress
    create 0644 www-data www-data
    sharedscripts
    postrotate
        invoke-rc.d syslog-ng reload > /dev/null
        [ ! -f /var/run/php-fpm.pid ] || kill -USR1 $(cat /var/run/php-fpm.pid)
    endscript
}
