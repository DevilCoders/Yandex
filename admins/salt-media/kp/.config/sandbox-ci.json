            {
              "pr_payload": "{{payload}}",
              "secret": "sec-01d2cny7z1jvg9syc695bbew2v",
              "notify_chat": "kp/kinomonga"
            },
            "custom_fields":
            [
              {"name": "yav_token", "value": "media.secure.robot-media-salt.yav.token"},
              {"name": "notify_chat", "value": "kp/kinomonga"}
            ]
          }
        ]
      },
      {
