Defaults env_keep += IBPATH

Cmnd_Alias SM = /usr/sbin/sminfo, /usr/sbin/smpquery nodedesc *

# centos and ubuntu has different paths to ibdiagnet
Cmnd_Alias IBDIAGNET = /bin/ibdiagnet, /usr/bin/ibdiagnet

telegraf  ALL = (root) NOPASSWD: IBDIAGNET

telegraf  ALL = (root) NOPASSWD: /bin/python3 /opt/ufmrestsdk/systems.pyc *
telegraf  ALL = (root) NOPASSWD: /bin/python3 /opt/ufmrestsdk/modules.pyc *
telegraf  ALL = (root) NOPASSWD: /usr/bin/docker ps *
telegraf  ALL = (root) NOPASSWD: /usr/sbin/manage_the_unmanaged *

telegraf  ALL = (root) NOPASSWD: SM

telegraf  ALL = (root) NOPASSWD: /etc/init.d/ufmha status
telegraf  ALL = (root) NOPASSWD: /usr/bin/docker ps *

