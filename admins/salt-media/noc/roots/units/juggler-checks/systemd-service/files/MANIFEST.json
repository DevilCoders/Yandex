{
    "version": 1,
    "checks": [
      {%- for entry in pillar["is_alive_systemd_services"]|default([]) %}{
        "check_script": "/etc/monrun/salt_systemd-service/systemd-service.sh",
        "args": ["is-active", "{{entry['name']}}", "{{entry['crit_message']|default('')}}"],
        "interval": {{entry['interval']|default(60)}},
        "run_always": true,
        "services": [
            "{{entry['name']}}"
        ],
        "tags": ["systemd.service" ],
        "timeout": 30
      }{%if not loop.last %},{% endif %}{%- endfor %}

    ]
}
