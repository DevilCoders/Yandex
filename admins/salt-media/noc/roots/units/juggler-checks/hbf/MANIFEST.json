{
  "version": 1,
  "checks": [
  {% if pillar['hbf_servername']|default(false) %}
    {
      "check_script": "/etc/monrun/salt_hbf/files/slb-check.sh",
      "args": [
        "{{pillar['hbf_servername']}}"
      ],
      "interval": 300,
      "run_always": true,
      "services": [
        "slb-check-{{pillar['hbf_servername']}}"
      ],
      "timeout": 30
    },
  {% endif %}

    {
      "check_script": "/etc/monrun/salt_hbf/files/slb-check.sh",
      "args": [
        "hbf.yandex.net"
      ],
      "interval": 300,
      "run_always": true,
      "services": [
        "slb-check-hbf.yandex.net"
      ],
      "timeout": 30
    },

    {
      "check_script": "/etc/monrun/salt_hbf/files/logstat.sh",
      "interval": 300,
      "run_always": true,
      "services": [
        "logstat_running"
      ],
      "timeout": 30
    },

    {
      "check_script": "/etc/monrun/salt_hbf/files/slb-check-running.sh",
      "interval": 300,
      "run_always": true,
      "services": [
        "slb-check_running"
      ],
      "timeout": 30
    },

    {
      "check_script": "/etc/monrun/salt_hbf/files/hbf_geo_base_status.sh",
      "interval": 300,
      "run_always": true,
      "services": [
        "geo_base_actual"
      ],
      "timeout": 30
    }
  ]
}
