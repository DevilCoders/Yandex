{
    "version": 1,
    "checks": [{
        "check_script": "/etc/monrun/salt_cert_expires/cert_expires.sh",
        {% if pillar['salt_cert_expires_path']|default(false) %}
        "args": "{{ pillar['salt_cert_expires_path'] }}",
        {% endif %}
        "interval": 600,
        "run_always": true,
        "services": [
            "cert_expires"
            {% if pillar['salt_cert_expires_service']|default(false) %}
            ,"{{ pillar['salt_cert_expires_service'] }}"
            {% endif %}
        ],
        "timeout": 30
    }]
}
