database:
  url: "mongodb://{{pillar['sec']['mongodb-ck-login-test']}}:{{pillar['sec']['mongodb-ck-password-test']}}@sas-mongo02.net.yandex.net,vla-mongo01.net.yandex.net,sas-mongo01.net.yandex.net,myt-mongo01.net.yandex.net/noc-ck-testing?replicaSet=rs0"
comocutor:
  login: "{{pillar['sec']['comocutor-login-test']}}"
  ssh-private-keys:
    - /home/robot-noc-ck/.ssh/id_rsa
  no-nocauth: "1"
rtapi:
  token: token.txt
  auth-try-ssh: False
yt:
  token: "{{pillar['sec']['yt']}}"
walle:
  base-url: https://api.wall-e-test.yandex-team.ru
  token: "{{pillar['sec']['walle-oauth-test']}}"
  # NOCDEV-5726: все Wall-E сценарии на тестовом ЦК будут создаваться с этим Startrek-тикетом
  # в production-инстансе стартрека
  override-startrek-issue-key: NOCDEV-5726
checkist:
  url: "https://chk-test.yandex-team.ru"
datacenter:
  default: my-test-default-dc
  hostmap:
    - host: vla-test-ck01
      datacenter: my-test-default-dc
  allowed_datacenters:
    - my-test-default-dc
tvm:
  client_id: 2023524
  secret: "{{pillar['sec']['tvm-secret-test']}}"
idm:
  tvm_client_id: 2001600
nalivkin:
  tvm_client_id: 2034183
logger:
  # without 'asctime' because of journald timestamping
  format: "%(levelname)s %(module)s:%(lineno)s: %(logger_extra)s%(message)s"
  level: DEBUG
blackbox:
  oauth_client_id: cd5543d9dd36409982d1ec6066dcc37d
  oauth_client_secret: "{{pillar['sec']['oauth-client-secret-test']}}"
monitoring:
  disabled: yes
startrek:
  # Для отладки каких-то связанных со стартреком фичей
  # можно переключится на тестовый st.test.yandex-team.ru
  # однако в повседневном тестинге он скорее мешает
  # base-url: https://st-api.test.yandex-team.ru/v2
  token: "{{pillar['sec']['startrek-token-test']}}"
error-booster:
  logbroker-token: "{{pillar['sec']['logbroker-token-test']}}"
  environment: testing
zookeeper:
  nodes:
{%- for host in salt.conductor.groups2hosts('nocdev-zk') %}
    - "{{ host }}:2181"
{%- endfor %}
  chroot: /ck/testing
warden:
  token: "{{pillar['sec']['warden-oauth-test']}}"
  base-url: https://warden-dev.z.yandex-team.ru
juggler:
  token: "{{pillar['sec']['juggler-token-test']}}"
