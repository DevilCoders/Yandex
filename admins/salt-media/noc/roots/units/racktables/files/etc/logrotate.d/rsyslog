/var/log/messages
{
	maxsize 1G
	missingok
	weekly
	rotate 10
	compress
	compresscmd /usr/bin/ionice
	compressoptions -c3 /usr/bin/zstd -1 -T2
	compressext .zst
	delaycompress
	notifempty
	dateext
	dateformat .%Y%m%d-%s
	sharedscripts
	postrotate
		/usr/lib/rsyslog/rsyslog-rotate
	endscript
}
