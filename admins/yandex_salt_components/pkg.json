{
    "meta": {
        "name": "yandex-salt-components",
        "maintainer": "NOCDEV <noc-dev@yandex-team.ru>",
        "description": "Salt with a built-in python from Arcadia and Yandex components",
        "version": "3004.2-yandex1",
        "conflicts": ["salt-common", "salt-minion", "salt-master", "salt-yandex-components"],
        "provides": ["salt-common", "salt-minion", "salt-master", "salt-yandex-components"],
        "replaces": ["salt-common", "salt-minion", "salt-master", "salt-yandex-components"],
        "noconffiles_all": true,
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/admins/yandex_salt_components"
    },
    "build": {
        "salt-components": {
            "targets": ["admins/yandex_salt_components"]
        }
    },
    "data": [
        {
            "source": {
                "type": "SANDBOX_RESOURCE",
                "id": 3331642330,
                "path": "salt-3004.2/salt",
                "untar": true
            },
            "destination": { "path": "/opt/yandex-salt-components/salt" }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "salt-components",
                "path": "admins/yandex_salt_components/yandex_salt_components"
            },
            "destination": {
                "path": "/usr/bin/salt"
            }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-call", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-cp", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-key", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-run", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-master", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-minion", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-venv", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "SYMLINK" },
            "destination": { "path": "/usr/bin/salt-arc", "target": "/usr/bin/salt" }
        },
        {
            "source": { "type": "DIRECTORY" },
            "destination": { "path": "/etc/salt/pki/minion" }
        },
        {
            "source": { "type": "DIRECTORY" },
            "destination": { "path": "/etc/salt/minion.d" }
        }
    ]
}
