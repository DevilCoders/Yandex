{
    "meta": {
        "name": "config-yandex-friendly-bash",
        "maintainer": "Yandex.Disk <disk-admin@yandex-team.ru>",
        "description": "Colorize bash prompt with hostname, adds mysql good looking prompt",
        "version": "{changelog_version}",
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/admins/config-yandex-friendly-bash"
    },
    "build": {
        "targets": [
            "admins/config-yandex-friendly-bash"
        ]
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "admins/config-yandex-friendly-bash/src/profile.d"
            },
            "destination": {
                "path": "/etc/profile.d"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "admins/config-yandex-friendly-bash/src/bashrc"
            },
            "destination": {
                "path": "/root/.bashrc",
                "attributes": {
                    "mode": {
                        "value": "0755"
                    }
                }
            }
        }
    ]
}
