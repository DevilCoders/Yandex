{
    "meta" : {
        "name" : "python-netconfig",
        "maintainer" : "noc-dev@yandex-team.ru",
        "description" : "Python script for creating network configurations on host",
        "version" : "{changelog_version}",
        "depends": ["coreutils", "ethtool", "iproute2 | iproute"], 
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/admins/python_netconfig"
    },
    "build" : {
        "targets" : [
            "admins/python_netconfig/bin"
        ]
    },
    "data" : [
        {
            "source" : {
                "type" : "BUILD_OUTPUT",
                "path" : "admins/python_netconfig/bin/netconfig"
            },
            "destination" : {
                "path" : "/usr/sbin/"
            }
        },
        {
            "source" : {
                "type" : "ARCADIA",
                "path" : "admins/python_netconfig/netconfig.d",
                "files": [
                    "*"
                ]
            },
            "destination" : {
                "path" : "/etc/netconfig.d/"
            }
        }
    ]
}
