#!/bin/bash

set -e

case "$1" in
	configure)

	F="/etc/apt/sources.list.d/media-common-testing.list"

	echo -e "#\n# autogenerated file, do not edit\n# coming from yandex-conf-repo-media-common-testing package\n#" >>$F
        echo "deb http://dist.yandex.ru/media-common testing/all/"   >>$F
        echo "deb http://dist.yandex.ru/media-common testing/amd64/" >>$F
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

exit 0
