#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS
override_dh_install:
	mkdir -p debian/mirror-configs-combaine/
	touch debian/mirror-configs-combaine/dummy
	rm -f debian/mirror-configs-combaine/*
	
	mkdir -p debian/mirror-configs-combaine/etc/combaine/aggregate/
	mkdir -p debian/mirror-configs-combaine/etc/combaine/parsing/
	mkdir -p debian/mirror-configs-combaine/usr/lib/yandex/combaine/parsers/
	
	cp -r sources/config/aggregate/* debian/mirror-configs-combaine/etc/combaine/aggregate/
	cp -r sources/config/parsing/* debian/mirror-configs-combaine/etc/combaine/parsing/
	cp -r sources/config/parsers/mirror_parser.py debian/mirror-configs-combaine/usr/lib/yandex/combaine/parsers/


%:
	dh $@ 
