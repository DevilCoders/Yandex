#!/usr/bin/make -f
override_dh_install:
	mkdir -p debian/config-corba-lpythonbp/usr/bin/
	mkdir -p debian/config-corba-lpythonbp/etc/cron.d/
	mkdir -p debian/config-corba-lpythonbp/etc/yandex/statbox-push-client/

	mkdir -p debian/config-corba-lpythonbp/etc/security/
	cp limits.conf debian/config-corba-lpythonbp/etc/security/limits.conf.lpythonbp
	cp omniORB.cfg debian/config-corba-lpythonbp/etc/omniORB.cfg.lpythonbp

	cp -r statbox-push-client-daemon/cron debian/config-corba-lpythonbp/etc/cron.d/statbox-watchdog
	cp -r statbox-push-client-daemon/push-client.sh debian/config-corba-lpythonbp/usr/bin/
	cp -r statbox-push-client-daemon/push-client.yaml debian/config-corba-lpythonbp/etc/yandex/statbox-push-client/

	cp memcached.conf debian/config-corba-lpythonbp/etc/memcached.conf

	chmod +x debian/config-corba-lpythonbp/usr/bin/*

#	mkdir -p debian/config-corba-lpythonbp/etc/rsyncd.d/
#	cp rsyncd.conf debian/config-corba-lpythonbp/etc/

%:
	dh $@

