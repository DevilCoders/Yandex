#!/bin/bash

divert () {
    CONFIG="${1}"
    CONFIG_RENAMED="${2}"
    rm -f ${CONFIG_RENAMED}
    dpkg-divert --package config-corba-lpythonbp --divert ${CONFIG_RENAMED} --rename ${CONFIG}
}

case "$1" in
    configure)
        divert "/etc/security/limits.conf" "/etc/security/limits.conf_orig"
        cp "/etc/security/limits.conf.lpythonbp" "/etc/security/limits.conf"
	divert "/etc/omniORB.cfg" "/etc/omniORB.cfg_orig"
	cp "/etc/omniORB.cfg.lpythonbp" "/etc/omniORB.cfg"
	#sed -i 's/RSYNC_ENABLE=false/RSYNC_ENABLE=true/' /etc/default/rsync
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

