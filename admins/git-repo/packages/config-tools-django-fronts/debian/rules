#!/usr/bin/make -f
override_dh_auto_build:
	./makelinks.sh
	dh_auto_build

override_dh_install:
	mkdir -p debian/config-tools-django-fronts/etc/nginx/sites-enabled
	mkdir -p debian/config-tools-django-fronts/etc/monrun/conf.d/
	mkdir -p debian/config-tools-django-fronts/etc/ganglia/
	mkdir -p debian/config-tools-django-fronts/etc/logster/
	mkdir -p debian/config-tools-django-fronts/etc/cron.d/
	cp -r nginx debian/config-tools-django-fronts/etc/
	cp -r monrun-conf.d/* debian/config-tools-django-fronts/etc/monrun/conf.d/
#	cp -r ganglia/* debian/config-tools-django-fronts/etc/ganglia/
	cp -r logster/* debian/config-tools-django-fronts/etc/logster/
	cp -r cron.d/* debian/config-tools-django-fronts/etc/cron.d/
%:
	dh $@

