#!/bin/bash

# clean
sed '/# Added by yandex-corba-download-master-samba-conf/,+5d' /etc/ssh/sshd_config -i
sed "s/^Subsystem\ sftp\ \/usr\/lib\/openssh\/sftp-server/\#Subsystem\ sftp\ \/usr\/lib\/openssh\/sftp-server/" /etc/ssh/sshd_config -i

# add new
echo '# Added by yandex-corba-download-master-samba-conf' >> /etc/ssh/sshd_config
echo 'Subsystem sftp internal-sftp' >> /etc/ssh/sshd_config
echo 'Match Group wiki_download-uploaders' >> /etc/ssh/sshd_config
echo '    ChrootDirectory /srv' >> /etc/ssh/sshd_config
echo '    AllowTCPForwarding no' >> /etc/ssh/sshd_config
echo '    X11Forwarding no' >> /etc/ssh/sshd_config

exit 0
