#!/usr/bin/make -f
override_dh_install:
	mkdir -p debian/corba-yarobot/usr/bin/
	mkdir -p debian/corba-yarobot/etc/cron.d/
	mkdir -p debian/corba-yarobot/var/run/yarobot/
	mkdir -p debian/corba-yarobot/usr/share/yarobot/ok_messages
	mkdir -p debian/corba-yarobot/etc/logrotate.d/
	mkdir -p debian/corba-yarobot/etc/init.d/

	cp yarobot.sh debian/corba-yarobot/usr/bin/yarobot.sh
	cp yarobot-logrotate debian/corba-yarobot/etc/logrotate.d/yarobot
	cp yarobot-cron debian/corba-yarobot/etc/cron.d/yarobot
	cp yarobot-init debian/corba-yarobot/etc/init.d/yarobot
	cp scripts/* debian/corba-yarobot/usr/share/yarobot/
	cp ok_messages/* debian/corba-yarobot/usr/share/yarobot/ok_messages

	chmod +x debian/corba-yarobot/etc/init.d/yarobot
	chmod +x debian/corba-yarobot/usr/share/yarobot/*
	chmod +x debian/corba-yarobot/usr/bin/yarobot.sh

%:
	dh $@

