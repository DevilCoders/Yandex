#!/bin/bash

divert () {
    CONFIG="${1}"
    CONFIG_RENAMED="${2}"
    rm -f ${CONFIG_RENAMED}
    dpkg-divert --package config-nginx-cback-geobase --divert ${CONFIG_RENAMED} --rename ${CONFIG}
}

case "$1" in
    configure|install)
        divert "/etc/nginx/sites-enabled/95-geobase.yandex.ru.conf" "/etc/nginx/sites-available/95-geobase.yandex.ru.conf.disabled"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure|upgrade)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
