#!/usr/bin/make -f
override_dh_install:
	rm -fr debian/config-nginx-lpythonbp/*
	mkdir -p debian/config-nginx-lpythonbp/etc/nginx/sites-enabled
	cp -r nginx debian/config-nginx-lpythonbp/etc/
	mkdir -p debian/config-nginx-lpythonbp/var/www/noc
	cp noc/ping debian/config-nginx-lpythonbp/var/www/noc/ping
	mkdir -p debian/config-nginx-lpythonbp/etc/logrotate.d/
	chmod 0600 debian/config-nginx-lpythonbp/etc/nginx/ssl/

%:
	dh $@

