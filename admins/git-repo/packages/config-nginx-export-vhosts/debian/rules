#!/usr/bin/make -f
override_dh_auto_build:
	./makelinks.sh
	dh_auto_build

override_dh_install:
	mkdir -p debian/config-nginx-export-vhosts/etc/nginx/sites-enabled
	cp -r nginx debian/config-nginx-export-vhosts/etc/
	mkdir -p debian/config-nginx-export-vhosts/usr/local/www/closed-projects/
	cp -r closed-projects/ debian/config-nginx-export-vhosts/usr/local/www/

override_dh_usrlocal:

%:
	dh $@

