#!/usr/bin/env bash                                                                                                                                          

LIST=`curl -s http://c.yandex-team.ru/api-cached/groups2hosts/kp-db|grep sedb|grep -v sedb01`

for i in `mysql -hsedb01-dbs.kp.yandex.net -ukinopoisk -pasd123 aprox_name -e "show tables" | grep _new`; do mysqldump -hsedb01-dbs.kp.yandex.net -ukinopoisk -pasd123 aprox_name --tables $i >> /tmp/aprox_name.sql; done
for i in `echo $LIST`; do ssh $i mysql aprox_name < /tmp/aprox_name.sql; done

mv /tmp/aprox_name.sql /tmp/aprox_name.sql.old
