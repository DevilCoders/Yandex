#!/bin/bash

divert () {
	CONFIG="${1}"
	CONFIG_RENAMED="${2}"
	rm -f ${CONFIG_RENAMED}
	dpkg-divert --package config-kp-space --divert ${CONFIG_RENAMED} --rename ${CONFIG}
}


case "$1" in
    configure)
        divert "/etc/yandex/statbox-push-server-lite/push-server-default.yaml" "/etc/yandex/statbox-push-server-lite/push-server-default.yaml.orig"
        cp "/usr/lib/yandex-configs/config-kp-space/push-server-default.yaml" "/etc/yandex/statbox-push-server-lite/push-server-default.yaml"
        cp "/usr/lib/yandex-configs/config-kp-space/statbox-server-check.conf" "/etc/monrun/conf.d/statbox-server-check.conf"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
