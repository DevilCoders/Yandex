global
        log /dev/log local0 warning
	maxconn 10000
	nbproc 1
	user haproxy
	group haproxy
	ulimit-n 65536
	daemon
	stats socket /tmp/haproxy-tools-mysql

listen stats *:1938
    mode http
    stats enable
    stats hide-version
    stats realm Tools\ Statistics
    stats uri /
    stats auth ADMIN:ADMIN


listen MySQL localhost:43306
       option mysql-check
       mode tcp
       balance roundrobin
       server Master-at01gt.tools.yandex.net at01gt.tools.yandex.net:3306 check port 3306 check inter 1000
       server Slave-at01ft6.tools.yandex.net at01ft6.tools.yandex.net:3306 check port 3306 check inter 1000

listen MySQL-master localhost:43307
        option mysql-check
        mode tcp
        balance source
        server at01gt.tools.yandex.net at01gt.tools.yandex.net:3306 check port 3306 check inter 1000

