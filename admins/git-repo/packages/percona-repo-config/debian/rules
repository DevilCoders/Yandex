#!/usr/bin/make -f

override_dh_install:
	mkdir -p debian/tmp/usr/share/percona-repo-config
	mkdir -p debian/tmp/etc/apt/sources.list.d
	mkdir -p debian/tmp/etc/apt/preferences.d
	mkdir -p debian/tmp/etc/apt/trusted.gpg.d
	cp perconakey.gpg debian/tmp/usr/share/percona-repo-config
	cp percona-repo-config.list debian/tmp/etc/apt/sources.list.d
	cp percona-repo-config.prefs debian/tmp/etc/apt/preferences.d/percona-repo-config
	cp percona-keyring1.gpg debian/tmp/etc/apt/trusted.gpg.d
	cp percona-keyring2.gpg debian/tmp/etc/apt/trusted.gpg.d
	dh_install

override_dh_builddeb:
	dh_builddeb -- -Zgzip

%:
	dh $@ 
