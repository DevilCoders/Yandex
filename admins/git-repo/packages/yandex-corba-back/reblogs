#! /bin/bash

/etc/init.d/hcheck stop
iptables -A INPUT -p tcp -s 10.0.0.0/8 --syn -j REJECT --reject-with tcp-reset
sleep 15

/etc/init.d/CORBA restart blogs-sanitize
/etc/init.d/CORBA restart yaprofile
/etc/init.d/CORBA restart blogs
/etc/init.d/CORBA restart blogs-mailer
/etc/init.d/CORBA restart blogs-aux
/etc/init.d/CORBA restart blogs-pump
/etc/init.d/yaru-httpapi restart
/etc/init.d/blogs-widgets restart

sleep 45
/etc/init.d/hcheck start
