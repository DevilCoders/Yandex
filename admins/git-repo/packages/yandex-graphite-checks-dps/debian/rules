#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

override_dh_install:
	mkdir -p debian/yandex-graphite-checks-dps/
	touch debian/yandex-graphite-checks-dps/dummy
	rm -f debian/yandex-graphite-checks-dps/*
	
	mkdir -p debian/yandex-graphite-checks-dps/usr/lib/yandex-graphite-checks/available/
	mkdir -p debian/yandex-graphite-checks-dps/usr/lib/yandex-graphite-checks/enabled/
	
	cp sources/usr/lib/yandex-graphite-checks/available/http.pl debian/yandex-graphite-checks-dps/usr/lib/yandex-graphite-checks/available/
	chmod +x debian/yandex-graphite-checks-dps/usr/lib/yandex-graphite-checks/available/http.pl
	
	cd debian/yandex-graphite-checks-dps/usr/lib/yandex-graphite-checks/enabled/ && ln -sf ../available/http.pl

%:
	dh $@ 
