#!/usr/bin/make -f
override_dh_install:
	mkdir -p debian/config-tools-haproxy-mysql/
	mkdir -p debian/config-tools-haproxy-mysql-testing/
	rm -fr debian/config-tools-haproxy-mysql/*
	rm -fr debian/config-tools-haproxy-mysql-testing/*
	mkdir -p debian/config-tools-haproxy-mysql/etc/init.d/
	mkdir -p debian/config-tools-haproxy-mysql/etc/haproxy/
	mkdir -p debian/config-tools-haproxy-mysql/etc/monrun/conf.d/
	mkdir -p debian/config-tools-haproxy-mysql-testing/etc/init.d/
	mkdir -p debian/config-tools-haproxy-mysql-testing/etc/haproxy/
	mkdir -p debian/config-tools-haproxy-mysql-testing/etc/monrun/conf.d/

        # stable package
	cp haproxy-tools-mysql.init debian/config-tools-haproxy-mysql/etc/init.d/haproxy-tools-mysql
	chmod +x debian/config-tools-haproxy-mysql/etc/init.d/haproxy-tools-mysql

	cp haproxy-tools-mysql.cfg debian/config-tools-haproxy-mysql/etc/haproxy/haproxy-tools-mysql.cfg
	cp monrun-tools-mysql.cfg debian/config-tools-haproxy-mysql/etc/monrun/conf.d/monrun-tools-mysql.cfg

        # package for testing
	cp haproxy-tools-mysql-testing.init debian/config-tools-haproxy-mysql-testing/etc/init.d/haproxy-tools-mysql-testing
	chmod +x debian/config-tools-haproxy-mysql-testing/etc/init.d/haproxy-tools-mysql-testing
	cp haproxy-tools-mysql-testing.cfg debian/config-tools-haproxy-mysql-testing/etc/haproxy/haproxy-tools-mysql-testing.cfg
	cp monrun-tools-mysql-testing.cfg debian/config-tools-haproxy-mysql-testing/etc/monrun/conf.d/monrun-tools-mysql-testing.cfg


%:
	dh $@

