#!/bin/sh
# postinst script for config-push-client-kp-local
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	#некоторые не хорошие программы не дают читать свои логи пользователю без прав
	if [[ -d /var/log/apache2 ]]; then
		chmod  o+x /var/log/apache2
		chmod -R o+r /var/log/apache2
	fi
	if [[ -d /var/log/nginx ]]; then
		chmod  o+x /var/log/nginx
		chmod -R o+r /var/log/nginx
	fi
	if [[ -f /etc/logrotate.d/nginx ]]; then
		sed -i "s/640/644/g" /etc/logrotate.d/nginx
	fi
	if [[ -f /etc/logrotate.d/apache2 ]]; then
		sed -i "s/640/644/g" /etc/logrotate.d/apache2
	fi
	if [[ ! -d /var/lib/push-client/archmaster  ]]; then
		mkdir  /var/lib/push-client/archmaster
                chown statbox:statbox /var/lib/push-client/archmaster
	fi
	if [[ ! -d /var/lib/push-client/larix  ]]; then
		mkdir  /var/lib/push-client/larix
                chown statbox:statbox /var/lib/push-client/larix
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


