#!/bin/bash

case "$1" in
    purge|remove|abort-install)
	dpkg-divert --remove /etc/apache2/apache2.conf.orig
	dpkg-divert --remove /etc/apache2/ports.conf.orig
    ;;
    upgrade|failed-upgrade|abort-upgrade|disappear)
        exit 0
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
