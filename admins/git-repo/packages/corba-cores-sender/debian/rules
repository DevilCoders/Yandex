#!/usr/bin/make -f

override_dh_install:
	mkdir -p debian/corba-cores-sender/
	touch debian/corba-cores-sender/dummy
	rm -rf debian/corba-cores-sender/*
	
	mkdir -p debian/corba-cores-sender/etc/cron.d/
	mkdir -p debian/corba-cores-sender/usr/bin/
	
	cp sources/etc/cron.d/* debian/corba-cores-sender/etc/cron.d/
	cp sources/usr/bin/* debian/corba-cores-sender/usr/bin/
	
	chmod +x debian/corba-cores-sender/usr/bin/*

%:
	dh $@ 
