#!/usr/bin/make -f
override_dh_install:
	mkdir -p debian/config-tools-api-balancers/etc/nginx/sites-enabled
	mkdir -p debian/config-tools-api-balancers/var/www/noc-test/
	mkdir -p debian/config-tools-api-balancers/etc/monrun/conf.d/
	mkdir -p debian/config-tools-api-balancers/etc/logrotate.d/
	cp -r nginx debian/config-tools-api-balancers/etc/
	cp noc-test/ping.html debian/config-tools-api-balancers/var/www/noc-test/
	cp monrun-conf.d/* debian/config-tools-api-balancers/etc/monrun/conf.d/
	cp logrotate.d/* debian/config-tools-api-balancers/etc/logrotate.d/

%:
	dh $@

