upstream askbot_upstream {
        server ask01e.otools.yandex.net:80 max_fails=1 fail_timeout=10s;
        server ask01g.otools.yandex.net:80 max_fails=1 fail_timeout=10s;
        server ask01f.otools.yandex.net:80 max_fails=1 fail_timeout=10s;
}

server {
        include listen;
        server_name   ask.yandex-team.ru;
        rewrite       ^ https://ask.yandex-team.ru$request_uri? permanent;
}

server {
        include listen_ssl;

        server_name  ask.yandex-team.ru;

        location / {
                proxy_pass       http://askbot_upstream;
                proxy_set_header Host      ask.yandex-team.ru;
                proxy_set_header X-Real-IP $remote_addr;
        }
}

server {
        include listen;
        include listen_ssl;

        server_name askbot askbot.yandex-team.ru ask;
        rewrite ^(.*)$ https://ask.yandex-team.ru$1 permanent;
}
