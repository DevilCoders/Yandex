upstream exam_upstream {
        server yaru-front01e.tools.yandex.net max_fails=1 fail_timeout=10s;
        #server yaru-front01d.tools.yandex.net max_fails=1 fail_timeout=10s;
	server yaru-at-front01d.tools.yandex.net max_fails=1 fail_timeout=10s;
}

server {
  listen 80;
  listen 443;

  server_name ~^exam.*;

  server_name www.exam.yandex-team.ru;

  access_log /var/log/nginx/exam.access.log main;

  location / {
    proxy_pass http://exam_upstream;
    proxy_set_header Host                   $host;
    proxy_set_header X-Real-IP              $remote_addr;
  }
}
