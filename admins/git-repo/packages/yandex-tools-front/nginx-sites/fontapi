upstream fontapi_upstream {
        server fontapi01h.otools.yandex.net max_fails=1 fail_timeout=10s;
}

server {
        include listen;
        server_name   fontapi.yandex-team.ru;
        rewrite       ^ https://fontapi.yandex-team.ru$request_uri? permanent;
}

server {
        include listen_ssl;

        server_name   fontapi.yandex-team.ru;

        location / {
                proxy_pass       http://fontapi_upstream;
                proxy_set_header Host      fontapi.yandex-team.ru;
                proxy_set_header X-Real-IP $remote_addr;
        }
}

