upstream tiles_upstream {
        server mapstaff.tiles.yandex.net max_fails=1 fail_timeout=20s;
}

server {
  listen 80;
  listen 443;

  server_name tiles.*;

  access_log /var/log/nginx/tiles.access.log main;

  location / {
			
    proxy_pass http://tiles_upstream;
    proxy_set_header Host                   mapstaff.tiles.yandex.net;
    proxy_set_header X-Real-IP              $remote_addr;
  }
}
