upstream tanker_upstream {
	server tanker-na1.yandex.net max_fails=1 fail_timeout=10s;
}

server {
	listen 80;
	listen 443;

	server_name  tanker.*;

	access_log /var/log/nginx/tanker.access.log main;

	location / {
		proxy_pass http://tanker_upstream;
		proxy_set_header Host                   tanker.yandex-team.ru;
		proxy_set_header X-Real-IP              $remote_addr;
	}
}
