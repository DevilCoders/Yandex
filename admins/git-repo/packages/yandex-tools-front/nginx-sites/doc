upstream doc_upstream {
	 server 127.0.0.1:8081;
#        server doc01e.tools.yandex.net max_fails=1 fail_timeout=10s;
#        server doc01d.tools.yandex.net max_fails=1 fail_timeout=10s;
}

server {
  listen 80;
  listen 443;

  server_name ~^doc.*;

  access_log /var/log/nginx/doc.access.log main;

  location / {
                        
    proxy_pass http://doc_upstream;
    proxy_set_header Host                   $host;
    proxy_set_header X-Real-IP              $remote_addr;
  }
}
