upstream gap_upstream {
        server gap01e.tools.yandex.net max_fails=1 fail_timeout=10s;
	server gap01g.tools.yandex.net backup;
}

server {
        include listen;
        include listen_ssl;

        server_name gap;
        location / {
                rewrite ^(.*) $scheme://gap.yandex-team.ru$1 permanent;
        }
}

server {
        include listen;
        include listen_ssl;

        server_name  gap.*;

        access_log /var/log/nginx/gap.access.log main;

        location / {
                proxy_pass http://gap_upstream;
                proxy_set_header Host                   gap.yandex-team.ru;
                proxy_set_header X-Real-IP              $remote_addr;
        }
}

