upstream smstools_upstream {
        server smstools01d.tools.yandex.net max_fails=1 fail_timeout=20s;
        server smstools01e.tools.yandex.net max_fails=1 fail_timeout=20s;
}

server {
        listen 80;
        listen 443;

        server_name smstools;
        
        location / {
                rewrite ^(.*)$ http://smstools.yandex-team.ru$1 permanent;
        }
}

server {
        listen 80;
        listen 443;

        server_name smstools.*;

        access_log /var/log/nginx/smstools.access.log main;

        location / {            
                proxy_pass http://smstools_upstream;
                proxy_set_header Host                   smstools.yandex-team.ru;
                proxy_set_header X-Real-IP              $remote_addr;
        }
}

