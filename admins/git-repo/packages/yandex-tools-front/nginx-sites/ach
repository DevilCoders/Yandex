upstream ach_upstream {
        server nagrada01g.tools.yandex.net max_fails=1 fail_timeout=10s;
	server nagrada01f6.tools.yandex.net max_fails=1 fail_timeout=10s;
}

server {
        listen 80;
        listen 443;

        server_name ach ach.*;

         if ($scheme = "http") {
              rewrite ^/(.*)$ http://achievery.yandex-team.ru/$1 redirect;
        }

}

server {
        listen 80;
        listen 443;

        server_name achievery.*;

        access_log /var/log/nginx/achievery.access.log main;

        location / {
                proxy_pass http://ach_upstream;
                proxy_set_header Host                   achievery.yandex-team.ru;
                proxy_set_header X-Real-IP              $remote_addr;
        }
}
