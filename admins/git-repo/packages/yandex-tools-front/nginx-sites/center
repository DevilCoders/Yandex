upstream center_upstream {
        server center01d.tools.yandex.net max_fails=1 fail_timeout=10s;
        server center01e.tools.yandex.net backup;
}

server {
        listen 80;
        listen 443;

        server_name  center.yandex-team.ru;

        access_log /var/log/nginx/center.access.log main;

        location / {
                proxy_pass       http://center_upstream;
                proxy_set_header Host      center.yandex-team.ru;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Client-Real-IP $http_x_real_ip;
                proxy_set_header X-Real-IP $remote_addr;
        }
}
