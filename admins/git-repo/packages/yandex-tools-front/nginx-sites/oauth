upstream oauth_upstream {
        server oauth01e.tools.yandex.net max_fails=1 fail_timeout=10s;
}

server {
        listen 80;
        listen 443;

        server_name  oauth.*;

        access_log /var/log/nginx/oauth.access.log main;

        location / {
                proxy_pass http://oauth_upstream;
                proxy_set_header Host                   oauth.yandex-team.ru;
                proxy_set_header X-Real-IP              $remote_addr;
        }
}

