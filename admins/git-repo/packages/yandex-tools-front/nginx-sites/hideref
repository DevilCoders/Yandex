upstream hideref_upstream {
        server hideref01d.tools.yandex.net max_fails=1 fail_timeout=10s;
        server hideref01e.tools.yandex.net max_fails=1 fail_timeout=10s;
}

server {
        listen 80;
        listen 443;

        server_name  h.yandex.net;

        access_log /var/log/nginx/hideref.access.log main;

        location / {
                proxy_pass       http://hideref_upstream;
                proxy_set_header Host      h.yandex.net;
                proxy_set_header X-Real-IP $remote_addr;
        }
}

