upstream askbot_upstream {
        server askbot01e.otools.yandex.net:8010 max_fails=1 fail_timeout=10s;
        server askbot01g.otools.yandex.net:8010 max_fails=1 fail_timeout=10s;
        server askbot01h.otools.yandex.net:8010 max_fails=1 fail_timeout=10s;
}

server {
        listen 80;
        server_name   ask.yandex-team.ru;
        rewrite       ^ https://ask.yandex-team.ru$request_uri? permanent;
}

server {
        listen 443;

        server_name  ask.yandex-team.ru;

        location / {
                proxy_pass       http://askbot_upstream;
                proxy_set_header Host      ask.yandex-team.ru;
                proxy_set_header X-Real-IP $remote_addr;
        }
}

server {
        listen 80;
        listen 443;
        
        server_name askbot askbot.yandex-team.ru ask;
        rewrite ^(.*)$ https://ask.yandex-team.ru$1 permanent;
}
