#!/bin/sh
set -e

case "$1" in
    install)
if [ -f  /var/run/nginx.pid ]; then
  kill $(cat /var/run/nginx.pid)
  sleep 5	
fi
        ;;

    upgrade|abort-upgrade)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
        ;;
esac

#DEBHELPER#

exit 0
