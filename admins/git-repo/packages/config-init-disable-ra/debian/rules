#!/usr/bin/make -f
override_dh_install:
	mkdir -p debian/config-init-disable-ra/
	rm -fr debian/config-init-disable-ra/*

	mkdir -p debian/config-init-disable-ra/etc/init.d/
	cp disable-ra.init debian/config-init-disable-ra/etc/init.d/disable-ra
	chmod +x debian/config-init-disable-ra/etc/init.d/disable-ra

	mkdir -p debian/config-init-disable-ra/var/lib/config-init-disable-ra/
	
	mkdir -p debian/config-init-disable-ra/usr/bin/
	cp jautov6here-check.sh debian/config-init-disable-ra/usr/bin/jautov6here-check.sh
	chmod +x debian/config-init-disable-ra/usr/bin/jautov6here-check.sh

	mkdir -p debian/config-init-disable-ra/etc/monrun/conf.d/
	cp jautov6here-check.conf debian/config-init-disable-ra/etc/monrun/conf.d/jautov6here-check.conf

override_dh_installdeb:
	dh_installdeb
	rm debian/*/DEBIAN/conffiles

override_dh_builddeb:
	dh_builddeb -- -Zgzip

%:
	dh $@

