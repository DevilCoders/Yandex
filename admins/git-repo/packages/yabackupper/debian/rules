#!/usr/bin/make -f
override_dh_install:
	mkdir -p debian/yabackupper/usr/bin/
	mkdir -p debian/yabackupper/etc/yabackupper/
	mkdir -p debian/yabackupper/var/log/yabuckupper/
	mkdir -p debian/yabackupper/usr/lib/yabackupper/
	cp bin/* debian/yabackupper/usr/bin/
	chmod +x debian/yabackupper/usr/bin/*
	cp -r conf/* debian/yabackupper/etc/yabackupper/
	cp lib/yabackupper/* debian/yabackupper/usr/lib/yabackupper/
	chmod +x debian/yabackupper/usr/lib/yabackupper/*

%:
	dh $@

