#!/usr/bin/make -f
override_dh_install:
	rm -fr debian/config-tools-balancers-haproxy/*
	mkdir -p debian/config-tools-balancers-haproxy/etc/nginx/sites-enabled
	cp -r nginx debian/config-tools-balancers-haproxy/etc/

	mkdir -p debian/config-tools-balancers-haproxy/etc/haproxy/
	mkdir -p debian/config-tools-balancers-haproxy/etc/init.d/
	cp haproxy-tools.cfg debian/config-tools-balancers-haproxy/etc/haproxy/haproxy-tools.cfg
	cp haproxy-tools.init debian/config-tools-balancers-haproxy/etc/init.d/haproxy-tools

	mkdir -p debian/config-tools-balancers-haproxy/usr/bin/
	cp haproxy-backends-check.sh debian/config-tools-balancers-haproxy/usr/bin/haproxy-backends-check.sh
	chmod +x debian/config-tools-balancers-haproxy/usr/bin/haproxy-backends-check.sh

	mkdir -p debian/config-tools-balancers-haproxy/etc/monrun/conf.d/
	cp monrun-haproxy-tools.conf debian/config-tools-balancers-haproxy/etc/monrun/conf.d/haproxy-tools.conf
	cp monrun-500.conf debian/config-tools-balancers-haproxy/etc/monrun/conf.d/500.conf

%:
	dh $@

