sda.1 --size=20000
sda.2 --size=10000
sda.3 --size=grow

sdb.1 --size=20000
sdb.2 --size=10000
sdb.3 --size=grow

sdc.1 --size=20000
sdc.2 --size=10000
sdc.3 --size=grow

sdd.1 --size=20000
sdd.2 --size=10000
sdd.3 --size=grow

md.0 --level=1 --raid-devices=sda.1 sdb.1 sdc.1 sdd.1 --mount=/
md.2 --level=1 --raid-devices=sda.2 sdb.2 sdc.2 sdd.2 --mount=swap
md.3 --level=10 --raid-devices=sda.3 sdb.3 sdc.3 sdd.3 --mount=/storage

