{
    "meta": {
        "name": "yandex-media-simple-ipmi-check",
        "maintainer": "Sergey Kacheev <skacheev@yandex-team.ru",
        "description": "Simple IPMI monitoring",
        "version": "{revision}.{branch}",
        "depends": ["ipmitool", "openipmi"],
        "provides": ["ipmimonitoring-metrika-yandex"],
        "conflicts": ["ipmimonitoring-metrika-yandex"],
        "replaces": ["ipmimonitoring-metrika-yandex"],
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/admins/yandex-media-simple-ipmi-check"
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "simple-ipmi-check.py"
            },
            "destination": {
                "path": "/usr/bin/simple-ipmi-check.py",
                "attributes": {
                    "mode": { "value": "+x" },
                    "owner": { "value": "0" },
                    "group": { "value": "0" }
                }
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "monrun.conf"
            },
            "destination": {
                "path": "/etc/monrun/conf.d/simple-ipmi.conf"
            }
        }
    ]
}
