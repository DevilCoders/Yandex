{
    "meta": {
        "name": "yandex-coredump-monitoring",
        "maintainer": "Igor Zhidkov <izhidkov@yandex-team.ru>",
        "description": "script for coredumps existance monitoring",
        "version": "{changelog_version}",
        "noconffiles_all": true,
        "homepage": "https://a.yandex-team.ru/arc_vcs/admins/yandex-coredump-monitoring",
    },
    "build": {
        "yandex-coredump-monitoring_build": {
            "targets": [
                "admins/yandex-coredump-monitoring"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "admins/yandex-coredump-monitoring/src/usr/bin",
                "files": [
                    "coredump_monitor.sh"
                ]
            },
            "destination": {
                "path": "/usr/bin/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "admins/yandex-coredump-monitoring/src/etc/monrun/conf.d",
                "files": [
                    "coredump.conf"
                ]
            },
            "destination": {
                "path": "/etc/monrun/conf.d/"
            }
        }
    ]
}
