[mysql_replica-4]
execution_interval = 60
command            = ( curl -s 'http://localhost:4417/mon/replica' || ( sleep 2; curl -s 'http://localhost:4417/mon/replica' ) ) || echo '2;cannot access the monitoring daemon'

[mysql_ping-4]
execution_interval = 60
command            = ( curl -s 'http://localhost:4417/mon/ping' || ( sleep 2; curl -s 'http://localhost:4417/mon/ping' ) ) || echo '2;cannot access the monitoring daemon'

[mysql_connections-4]
execution_interval = 60
command            = ( curl -s 'http://localhost:4417/mon/connections' || ( sleep 2; curl -s 'http://localhost:4417/mon/connections' ) ) || echo '2;cannot access the monitoring daemon'

[mysql_backup_data-4]
execution_interval = 300
command            = mysql-backup-data-4 --check-log|& grep --color=never '^[012];' || echo "0;Ok"
