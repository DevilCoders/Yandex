# main master config
interface: '::'
ipv6: True
worker_threads: 24
user: robot-media-salt
fileserver_backend:
  - roots
file_roots:
  testing:
    - /srv/git/media/roots/
    - /srv/git/common/roots/
    - /srv/salt/roots
pillar_roots:
  testing:
    - /srv/git/
    - /srv/git/common/pillar/
    - /srv/git/media/pillar/
log_level: INFO
log_level_logfile: INFO
auto_accept: True
ping_on_rotate: True
keep_jobs: 1
