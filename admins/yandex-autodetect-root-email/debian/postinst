#!/bin/bash

case $1 in
    configure)
        # При наливке dns записи ещё могут отсутствовать, и root email
        # вполне можно оставить не сконфигурённым, он доконфигурится после
        # наливки, когда появятся dns записи. Обратный кейс вызывает очень
        # много болей с ломающейся наливкой и требованием прописывать все
        # dns записи до наливки. DNS вполне может притягиваться автоматикой
        # уже после наливки. Поэтому тут ставим || true.
        /usr/local/sbin/autodetect_root_email.sh configure || true
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
    ;;
esac

