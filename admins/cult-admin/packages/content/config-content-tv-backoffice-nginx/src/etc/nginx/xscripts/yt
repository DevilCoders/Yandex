location ~* \.xml$ {
    fastcgi_intercept_errors on;
    fastcgi_pass    unix:/tmp/xscript-multiple/xscript-yt.sock;
    include fastcgi_params_yandex;
}

location ~ ^/ping_xscript_default$ {
    root /usr/local/www5/xscript;
    rewrite ^/ping_xscript_default$  /ping.xml  break;
    fastcgi_intercept_errors on;
    fastcgi_pass    unix:/tmp/xscript.sock;
    include fastcgi_params_yandex;
}

location ~* ^/ping_xscript_coverage$ {
    root /usr/local/www5/xscript;
    rewrite ^/ping_xscript_coverage$  /ping.xml  break;
    fastcgi_intercept_errors on;
    fastcgi_pass    unix:/tmp/xscript-multiple/xscript-coverage.sock;
    include fastcgi_params_yandex;
}

location ~* ^/ping_xscript_yt$ {
    root /usr/local/www5/xscript;
    rewrite ^/ping_xscript_yt$  /ping.xml  break;
    fastcgi_intercept_errors on;
    fastcgi_pass    unix:/tmp/xscript-multiple/xscript-yt.sock;
    include fastcgi_params_yandex;
}
