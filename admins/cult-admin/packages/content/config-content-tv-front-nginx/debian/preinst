#!/bin/bash

#remove old file if exists for some reason
rm -f /etc/nginx/listen_https || true

# Add diversion for access.log format

pkg=config-content-tv-front-nginx
diversion_added_version=1.1
this_version=1.1

mkdir -p /usr/share/yandex-configs/$pkg

if
    test "$1" = install || 
    dpkg --compare-versions "$2" lt "$diversion_added_version" ||
    dpkg --compare-versions "$this_version" lt "$2"
then
    dpkg-divert --package "$pkg" --add --rename \
        --divert "/usr/share/yandex-configs/$pkg/01-accesslog.conf" /etc/nginx/conf.d/01-accesslog.conf
fi


