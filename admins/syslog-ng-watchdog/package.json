{
    "meta": {
        "name": "syslog-ng-watchdog",
        "maintainer": "Evgeniy Zaitsev <eightn@yandex-team.ru>",
        "description": "syslog-ng watchdog",
        "version": "{changelog_version}",
        "noconffiles_all": true,
        "homepage": "https://a.yandex-team.ru/arc_vcs/admins/syslog-ng-watchdog",
        "depends": [
            "syslog-ng"
        ]
    },
    "build": {
        "syslog_ng_watchdog_build": {
            "targets": [
                "admins/syslog-ng-watchdog"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "admins/syslog-ng-watchdog/src/usr/bin",
                "files": [
                    "syslog-ng-watchdog.sh"
                ]
            },
            "destination": {
                "path": "/usr/bin/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "admins/syslog-ng-watchdog/src/etc/cron.d",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/etc/cron.d/"
            }
        }
    ]
}
