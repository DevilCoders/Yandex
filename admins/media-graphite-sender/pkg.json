{
    "meta": {
        "name": "media-graphite-sender",
        "maintainer": "Sergey Kacheev <skacheev@yandex-team.ru>",
        "description": "Receive metric data over tcp and send it to a number of graphite servers",
        "version": "{changelog_version}.{revision}.{branch}",
        "noconffiles_all": true,
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/admins/media-graphite-sender/",

        "provides": ["yabs-graphite-sender"],
        "conflicts": ["yabs-graphite-sender"],
        "replaces": ["yabs-graphite-sender"]
    },
    "build": {
        "media_graphite_sender_build": {
            "targets": ["admins/media-graphite-sender/cmd"]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "media_graphite_sender_build",
                "path": "admins/media-graphite-sender/cmd/media-graphite-sender"
            },
            "destination": {
                "path": "/usr/bin/"
            }
        },
        {
            "source": { "type": "RELATIVE", "path": "contrib/etc" },
            "destination": { "path": "/" }
        },
        {
            "source": { "type": "DIRECTORY" },
            "destination": { "path": "/var/log/graphite-sender" }
        },
        {
            "source": { "type": "DIRECTORY" },
            "destination": { "path": "/etc/graphite-sender" }
        },
        {
            "source": { "type": "DIRECTORY" },
            "destination": { "path": "/var/spool/graphite-sender" }
        }
    ]
}
