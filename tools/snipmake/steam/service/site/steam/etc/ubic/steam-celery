# vim: ft=perl

use Ubic::Service::SimpleDaemon;

Ubic::Service::SimpleDaemon->new(
    bin => 'python /usr/share/pyshared/steam/manage.py celeryd -EB --autoreload --concurrency=3 --loglevel=INFO --workdir=/usr/share/pyshared/steam/ --logfile=/var/log/yandex/steam/celeryd_steam.log',
    user => 'www-data',
    group => 'www-data',
    stdout => '/var/log/yandex/steam/celery.out.log',
    stderr => '/var/log/yandex/steam/celery.err.log',
    ubic_log => '/var/log/yandex/steam/ubic/celeryd_steam.log',
);
