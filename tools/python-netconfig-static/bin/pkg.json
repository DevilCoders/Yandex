{
    "meta" : {
        "name" : "python-netconfig-static",
        "maintainer" : "Pushkin Dmitry <dspushkin@yandex-team.ru>",
        "description" : "Python script for creating network configurations on host. This is the port of https://github.yandex-team.ru/devtools/python-netconfig (PASSP-32540)",
        "provides": [
            "python-netconfig(=0.67)"
        ],
	"conflicts": [
	    "python-netconfig"
        ],	    
        "version" : "0.67-{revision}"
    },
    "build" : {
        "targets" : [
            "tools/python-netconfig-static/bin/generate_interfaces",
	    "tools/python-netconfig-static/bin/generate_hosts"
        ]
    },
    "data" : [
        {
            "source" : {
                "type" : "BUILD_OUTPUT",
                "path" : "tools/python-netconfig-static/bin/generate_interfaces/generate_interfaces.py"
            },
            "destination" : {
                "path" : "/usr/lib/yandex/python-netconfig/",
		"attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
	{
            "source" : {
                "type" : "BUILD_OUTPUT",
                "path" : "tools/python-netconfig-static/bin/generate_hosts/generate_hosts.py"
            },
            "destination" : {
                "path" : "/usr/lib/yandex/python-netconfig/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source" : {
                "type" : "ARCADIA",
                "path" : "tools/python-netconfig-static/bin/netconfig.d",
                "files": [
                    "*"
                ]
            },
            "destination" : {
                "path" : "/etc/netconfig.d/"
            }
        },
	{
            "source" : {
                "type" : "ARCADIA",
                "path" : "tools/python-netconfig-static/bin/netconfig.sh"
            },
            "destination" : {
                "path" : "/usr/sbin/netconfig",
	        "attributes": {
                    "mode": {
		        "value": "+x"
		    }
	        }
            }
        }
    ]
}
