{
    "meta": {
        "name": "sandboxctl",
        "maintainer": "Dmitry Monakhov <dmtrmonakhov@yandex-team.ru>",
        "description": "Yandex sandbox command line utility",
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/tools/sandboxctl/README.md",
        "version": "0.1-{revision}",
        "depends": [
	    "python"
        ]
    },
    "build": {
        "targets": [
            "tools/sandboxctl/bin"
        ],
	"musl": true
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "tools/sandboxctl/bin/sandboxctl"
            },
            "destination": {
                "path": "/opt/yandex-sandbox/sandboxctl"
            }
        },
        {
            "source": {
		    "type": "SYMLINK"
	    },
            "destination": {
		    "path": "/usr/bin/sandboxctl",
                    "target": "/opt/yandex-sandbox/sandboxctl"
	    }
        }
    ]
}
