#!/usr/bin/python
# -*- coding: utf-8 -*-
import sys

def main():
    for filename in sys.argv[1:]:
        with open(filename, 'rb') as f:
            data = f.read()
        if not data.startswith('#pragma once\n'):
            data = '#pragma once\n\n' + data
            with open(filename, 'wb') as f:
                f.write(data)

if __name__ == '__main__':
    main()
