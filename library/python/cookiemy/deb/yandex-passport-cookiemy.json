{
    "meta" : {
        "name" : "yandex-passport-cookiemy",
        "maintainer" : "Pasha Perevedentsev <ppodolsky@yandex-team.ru>",
        "description" : "Passport binding for libcookiemy",
        "depends": [
            "python"
        ],
        "replaces": [
            "libcookiemy-python"
        ],
        "version" : "{changelog_version}"
    },
    "build" : {
        "targets" :  [
            "library/python/cookiemy/so"
        ],
        "flags" : [
            {
                "name" : "USE_SYSTEM_PYTHON",
                "value" : "2.7"
            }
        ]
    },
    "data" : [
        {
            "source" : {
                "type" : "BUILD_OUTPUT",
                "path" : "library/python/cookiemy/so",
                "files": [
                    "cookiemy.so"
                ]
            },
            "destination" : {
                "path" : "/usr/lib/python2.7/dist-packages/"
            }
        }
    ]
}
