#!/usr/bin/env python
# coding: utf-8

import sys


def decode(s):
    return s.decode('string_escape')


def decode_file(f):
    # здесь используются одиночные 'readline' потому, что xreadlines и __iter__
    # используют внутренний буфер и в случае использования 'ylog-decode' совместно
    # с 'tail -f' не все строки выводятся сразу
    line = f.readline()
    while line:
        sys.stdout.write(decode(line) + '\n')
        line = f.readline()


if __name__ == "__main__":
    try:
        if len(sys.argv) > 1:
            for fname in sys.argv[1:]:
                decode_file(open(fname))
        else:
            decode_file(sys.stdin)
    except KeyboardInterrupt:
        pass
