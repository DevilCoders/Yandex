{
    "meta": {
        "version": "{revision}"
    },
    "build": {
        "package": {
            "targets": [
                "{package_root}"
            ],
            "flags": [
                {
                    "name": "USE_PREBUILT_TOOLS",
                    "value": "yes"
                }
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "package",
                "path": "{package_root}/{package_name}"
            },
            "destination": {
                "path": "/{package_name}/lib"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "package",
                "path": "{package_root}/bin/{package_name}.sh"
            },
            "destination": {
                "path": "/{package_name}/bin/{package_name}.sh",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "package",
                "path": "{package_root}/jdk",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/{package_name}/jdk/"
            }
        },
        {
            "source": {
                "type": "SANDBOX_RESOURCE",
                "id": "1890123539"
            },
            "destination": {
                "path": "/solomon-agent/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "ci/common/application/src/main/script/unified-agent",
                "files": [
                    "*.yaml"
                ]
            },
            "destination": {
                "path": "/unified-agent/"
            }
        },
        {
            "source": {
                "type": "SANDBOX_RESOURCE",
                "id": "2929064221"
            },
            "destination": {
                "path": "/unified-agent/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "ci/common/application/src/main/script/solomon-agent.conf"
            },
            "destination": {
                "path": "/solomon-agent/"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "{package_root}/src/main/conf",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/{package_name}/conf/",
                "attributes": {
                    "mode": {
                        "value": "a+r",
                        "recursive": true
                    }
                }
            }
        }
    ]
}
