{
    "required": [
        "iterations",
        "stage"
    ],
    "type": "object",
    "properties": {
        "title": {
            "title": "Заголовок ресурса",
            "type": "string"
        },
        "iterations": {
            "title": "Количество итераций",
            "type": "integer",
            "minimum": 0,
            "maximum": 5
        },
        "percentile": {
            "type": "number",
            "minimum": 0.01,
            "maximum": 1.0
        },
        "type": {
            "title": "Тип запуска",
            "type": "string",
            "enum": [
                "release",
                "not-release"
            ],
            "default": "release"
        },
        "do-tests": {
            "title": "Запустить тесты",
            "description": "Будь осторожен, Люк!",
            "type": "boolean",
            "default": true
        },
        "stage": {
            "type": "object",
            "properties": {
                "stable": {
                    "type": "boolean"
                },
                "prestable": {
                    "type": "boolean"
                },
                "testing": {
                    "title": "Тестинг",
                    "type": "boolean"
                }
            }
        },
        "resources": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "DOCKER_IMAGE",
                    "LOGS"
                ]
            }
        },
        "dependency_resources": {
            "type": "array",
            "items": {
                "type": "integer",
                "enum": [
                    111,
                    444,
                    888
                ]
            }
        }
    }
}
