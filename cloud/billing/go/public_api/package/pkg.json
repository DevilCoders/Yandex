{
    "meta": {
        "name": "yc-billing-public-api",
        "maintainer": "yc-billing",
        "version": "0.1-{sandbox_task_id}-{branch}",
        "description": "Package with public api grpc proxy service"
    },
    "build": {
        "build_type": "release",
        "targets": [
            "cloud/billing/go/public_api/cmd/grpc_server"
        ],
        "target-platforms": [
            "DEFAULT-LINUX-X86_64"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/billing/go/public_api/cmd/grpc_server"
            },
            "destination": {
                "path": "/usr/bin"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "systemd/yc-billing-public-api.service"
            },
            "destination": {
                "path": "/lib/systemd/system/yc-billing-public-api.service"
            }
        }
    ]
}
