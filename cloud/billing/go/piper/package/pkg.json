{
    "meta": {
        "name": "yc-billing-piper",
        "maintainer": "yc-billing",
        "description": "Package with metrics processing service"
    },
    "include": [
        {
            "package": "cloud/billing/go/deploy/versions/piper.json"
        }
    ],
    "build": {
        "build_type": "release",
        "targets": [
            "cloud/billing/go/piper/cmd"
        ],
        "target-platforms": [
            "DEFAULT-LINUX-X86_64"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/billing/go/piper/cmd"
            },
            "destination": {
                "path": "/"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "INLINE",
                "content": "{branch}-r{revision}"
            },
            "destination": {
                "path": "/version.txt"
            }
        }
    ]
}
