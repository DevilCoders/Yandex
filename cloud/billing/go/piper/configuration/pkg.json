{
    "meta": {
        "name": "yc-billing-piper-configs",
        "maintainer": "yc-billing",
        "description": "Package with additional tools for billing go services deploy. Build from {revision}@{branch}"
    },
    "include": [
        {
            "package": "cloud/billing/go/deploy/versions/piper.json"
        }
    ],
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "configs"
            },
            "destination": {
                "path": "/configs"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/billing/go/deploy/versions/piper.json"
            },
            "destination": {
                "path": "/configs/common/piper/version.yaml"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "scripts"
            },
            "destination": {
                "path": "/scripts"
            }
        },
        {
            "source": {
                "type": "INLINE",
                "content": "{branch}-r{revision}"
            },
            "destination": {
                "path": "/version.txt"
            }
        }
    ]
}
