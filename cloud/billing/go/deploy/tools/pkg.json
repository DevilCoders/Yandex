{
    "meta": {
        "name": "yc-billing-sidecars",
        "maintainer": "yc-billing",
        "description": "Package with additional tools for billing go services deploy. Build from {revision}@{branch}"
    },
    "include": [
        {
            "package": "cloud/billing/go/deploy/versions/tools.json"
        }
    ],
    "build": {
        "build_type": "release",
        "targets": [
            "passport/infra/daemons/tvmtool/cmd"
        ],
        "target-platforms": [
            "DEFAULT-LINUX-X86_64"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "passport/infra/daemons/tvmtool/cmd/tvmtool"
            },
            "destination": {
                "path": "/tvmtool"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "logbroker/unified_agent/pkg/yandex-unified-agent/common/config.yml"
            },
            "destination": {
                "path": "/ua_config.yml"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "configs"
            },
            "destination": {
                "path": "/configs"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "files"
            },
            "destination": {
                "path": "/files"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "scripts"
            },
            "destination": {
                "path": "/scripts"
            }
        },
        {
            "source": {
                "type": "INLINE",
                "content": "{branch}-r{revision}"
            },
            "destination": {
                "path": "/version.txt"
            }
        }
    ]
}
