{
    "version": 1,
    "bundle_name": "yc-billing-piper",
    "env": {
        "USER": "root"
    },
    "checks": [
         {
            "check_name": "piper-pod",
            "check_script": "piper-pod.sh",
            "args": [],
            "format": "nagios",
            "interval": 15,
            "timeout": 30,
            "run_always": true,
