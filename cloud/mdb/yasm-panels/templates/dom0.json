{
    <% set hosts = hosts|default('CON') %>
    <% set tag = 'itype=mdbdom0' %>

    <% if geo in ('myt', 'iva', 'sas', 'man', 'vla') %>
    <% set tag = tag ~ ';geo=' ~ geo %>
    <% endif %>

    <% if tier %>
    <% set tag = tag ~ ';tier=' ~ tier %>
    <% endif %>

    <% if ctype %>
    <% set tag = tag ~ ';ctype=' ~ ctype %>
    <% endif %>

    <% if prj %>
    <% set tag = tag ~ ';prj=' ~ prj %>
    <% endif %>

    "title": "<< hosts >>",
    "type": "panel",
    "charts": [
        {
            "id": "1",
            "type": "graphic",
            "width": 2,
            "height": 2,
            "row": 1,
            "col": 1,
            "yAxis": [
                {}
            ],
            "signals": [
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-cpu_usage_cores_tmmv",
                    "title": "Used"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-cpu_guarantee_cores_tmmv",
                    "title": "Guaranteed"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-cpu_wait_cores_tmmv",
                    "title": "Waiting"
                }
            ],
            "consts": [],
            "range": 1500,
            "title": "CPU cores",
            "stacked": false,
            "normalize": true
        },
        {
            "id": "2",
            "type": "graphic",
            "width": 2,
            "height": 2,
            "row": 1,
            "col": 3,
            "yAxis": [
                {}
            ],
            "signals": [
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-memory_usage_gb_tmmv",
                    "title": "Used"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-memory_guarantee_gb_tmmv",
                    "title": "Guaranteed"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-memory_limit_gb_tmmv",
                    "title": "Limit"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-anon_usage_gb_tmmv",
                    "title": "Anon used"
                }
            ],
            "consts": [],
            "range": 1500,
            "title": "Memory (GB)",
            "stacked": false,
            "normalize": true
        },
        {
            "id": "3",
            "type": "graphic",
            "width": 2,
            "height": 2,
            "row": 3,
            "col": 1,
            "yAxis": [
                {}
            ],
            "signals": [
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-io_read_bytes_tmmv",
                    "normalizable": true,
                    "title": "Read"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-io_write_fs_bytes_tmmv",
                    "normalizable": true,
                    "title": "Write"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-io_limit_bytes_tmmv",
                    "normalizable": true,
                    "title": "Limit"
                }
            ],
            "consts": [],
            "range": 1500,
            "title": "Disk I/O (B/s)",
            "stacked": false,
            "normalize": true
        },
        {
            "id": "4",
            "type": "graphic",
            "width": 2,
            "height": 2,
            "row": 3,
            "col": 3,
            "yAxis": [
                {}
            ],
            "signals": [
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "portoinst-net_guarantee_mb_summ",
                    "title": "Guaranteed"
                },
                {
                    "tag": "<< tag >>",
                    "host": "<< hosts >>",
                    "name": "sum(portoinst-net_rx_mb_summ, portoinst-net_tx_mb_summ)",
                    "title": "Used"
                }
            ],
            "consts": [],
            "range": 1500,
            "title": "Network (MB/s)",
            "stacked": false,
            "normalize": true
        }
    ]
}
