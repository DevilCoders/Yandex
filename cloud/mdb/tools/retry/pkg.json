{
    "meta": {
        "name": "retry",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Simple console retry wrapper",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/tools/retry"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/tools/retry/retry"
            },
            "destination": {
                "path": "/usr/local/bin/retry"
            }
        }
    ]
}
