{
    "meta": {
        "name": "mdb-kafka-agent",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Helper app that runs on brokers of Managed Kafka cluster",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "kafka-agent": {
            "targets": [
                "cloud/mdb/kafka_agent/bin"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "kafka-agent",
                "path": "cloud/mdb/kafka_agent/bin/kafka-agent"
            },
            "destination": {
                "path": "/opt/yandex/kafka-agent/bin/kafka-agent"
            }
        }
    ]
}
