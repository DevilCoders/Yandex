{
    "meta": {
        "name": "mdb-backup",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Backup-service for MDB clusters",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/mdb/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/backup/scheduler/cmd/scheduler",
                "cloud/mdb/backup/worker/cmd/worker",
                "cloud/mdb/backup/worker/cmd/cli"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/backup/scheduler/cmd/scheduler"
            },
            "destination": {
                "path": "/opt/yandex/mdb-backup/bin/mdb-backup-scheduler"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/backup/worker/cmd/worker"
            },
            "destination": {
                "path": "/opt/yandex/mdb-backup/bin/mdb-backup-worker"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/backup/worker/cmd/cli"
            },
            "destination": {
                "path": "/opt/yandex/mdb-backup/bin/mdb-backup-cli"
            }
        }
    ]
}
