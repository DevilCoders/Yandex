{
    "$comment": "Hadoop cluster Resource preset in console/clusters:config definition",
    "type": "object",
    "properties": {
        "hostTypes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "MASTERNODE",
                            "DATANODE",
                            "COMPUTENODE"
                        ]
                    },
                    "resourcePresets": {
                        "allOf": [
                            { "$ref": "../clusters_config_schema_common.json#/definitions/resourcePresets" },
                            {
                                "required": ["gpuLimit"]
                            }
                        ]
                    },
                    "defaultResources": {
                        "$ref": "../clusters_config_schema_common.json#/definitions/defaultResources"
                    }
                },
                "required": [
                    "type",
                    "resourcePresets",
                    "defaultResources"
                ]
            },
            "minLength": 3,
            "maxLength": 3
        }
    },
    "required": [
        "hostTypes"
    ]
}
