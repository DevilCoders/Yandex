{
    "meta": {
        "name": "mdb-internal-api",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Internal API for MDB service",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/mdb-internal-api/cmd/mdb-internal-api",
                "cloud/mdb/mdb-internal-api/cmd/mdb-internal-api-cli",
                "cloud/mdb/mdb-internal-api/cmd/mdb-search-reindexer"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-internal-api/cmd/mdb-internal-api/mdb-internal-api"
            },
            "destination": {
                "path": "/opt/yandex/mdb-internal-api/mdb-internal-api"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-internal-api/cmd/mdb-internal-api-cli/mdb-internal-api-cli"
            },
            "destination": {
                "path": "/usr/local/bin/mdb-internal-api-cli"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-internal-api/cmd/mdb-search-reindexer/mdb-search-reindexer"
            },
            "destination": {
                "path": "/usr/local/bin/mdb-search-reindexer"
            }
        }
    ]
}
