{
    "meta": {
        "name": "yandex-mdb-idm-service",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "MDB IDM Service",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/idm_service/uwsgi"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/idm_service/uwsgi/mdb-idm-service.wsgi"
            },
            "destination": {
                "path": "/opt/yandex/mdb-idm-service/bin/idm_service.wsgi"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "uwsgi.deb.ini"
            },
            "destination": {
                "path": "/opt/yandex/mdb-idm-service/uwsgi.ini"
            }
        }
    ]
}
