{
    "meta": {
        "name": "mdb-deploy-saltkeys",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Manages salt-minion keys on salt-master using mdb-deploy-api",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/deploy/saltkeys/cmd/mdb-deploy-saltkeys"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/deploy/saltkeys/cmd/mdb-deploy-saltkeys/mdb-deploy-saltkeys"
            },
            "destination": {
                "path": "/opt/yandex/mdb-deploy-saltkeys/bin/mdb-deploy-saltkeys"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/deploy/saltkeys/etc/upstart.conf"
            },
            "destination": {
                "path": "/etc/init/mdb-deploy-saltkeys.conf"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/deploy/saltkeys/etc/mdb-deploy-saltkeys.service"
            },
            "destination": {
                "path": "/lib/systemd/system/mdb-deploy-saltkeys.service"
            }
        }
    ]
}
