{
    "meta": {
        "name": "mdb-deploy-agent",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Deploy agent for MDB VMs",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/mdb/internal/teams/core/deployv3"
    },
    "build": {
        "targets": [
            "cloud/mdb/deploy/agent/cmd/mdb-deploy-agent",
            "cloud/mdb/deploy/agent/cmd/mdb-deploy",
            "cloud/mdb/deploy/agent/completion"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/deploy/agent/cmd/mdb-deploy-agent/mdb-deploy-agent"
            },
            "destination": {
                "path": "/usr/local/sbin/mdb-deploy-agent"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/deploy/agent/cmd/mdb-deploy/mdb-deploy"
            },
            "destination": {
                "path": "/usr/local/sbin/mdb-deploy"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/deploy/agent/completion/mdb-deploy.bash",
            },
            "destination": {
                "path": "/usr/share/bash-completion/completions/mdb-deploy"
            }
        },
        {
            "destination": {
                "path": "/etc"
            },
            "source": {
                "path": "etc",
                "type": "RELATIVE"
            }
        }
    ]
}
