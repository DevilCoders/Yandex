{
    "id": "mdb-<< env >>-tasks-failed-prc",
    "projectId": "{{projectId}}",
    "name": "[<< svc >>][<< env >>] Failed >4% of tasks",
    "version": 5,
    "createdBy": "asalimonov",
    "notificationChannels": ["<< notification_channel >>"],
    "type": {
        "expression": {
            "program": "{{alert_program}}",
            "checkExpression": "is_red"
        }
    },
    "annotations": {
        "trafficLight.color": "{{expression.trafficColor}}",
        "host": "<< worker_host >>_vhost",
        "service": "dbaas_worker_failed_new_cluster_tasks",
        "description": "Failed tasks: {{expression.failed_c}}"
    },

    "periodMillis": 7200000,
    "delaySeconds": 600,
    "description": "Notify when failed more then 4% of tasks."
}
