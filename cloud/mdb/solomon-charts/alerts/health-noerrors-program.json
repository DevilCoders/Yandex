let errors = {cluster='<< health_cluster_name >>', service='<< health_service_id >>', project='<< project_id >>', dc='by_node', name='mdb_*_api_requests_total_code_5??_method_*t_ammv_rate'};

let avg_errors = map(errors, x -> avg(x));

let is_yellow = max(avg_errors) > 1;
let is_red = max(avg_errors) > 2;

alarm_if(is_red);
warn_if(is_yellow);
