{
    "meta": {
        "name": "mdb-salt-sync",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "SaltStack data sync",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/mdb-salt-sync/cmd/mdb-salt-sync",
                "cloud/mdb/mdb-salt-sync/cmd/mdb-salt-image-age"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-salt-sync/cmd/mdb-salt-sync/mdb-salt-sync"
            },
            "destination": {
                "path": "/opt/yandex/mdb-salt-sync/mdb-salt-sync"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-salt-sync/cmd/mdb-salt-image-age/mdb-salt-image-age"
            },
            "destination": {
                "path": "/opt/yandex/mdb-salt-sync/mdb-salt-image-age"
            }
        }
    ]
}
