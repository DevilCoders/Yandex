{
    "meta": {
        "name": "mdb-cms",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "CMS helps duty maintain physical nodes",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/cms/api/cmd/mdb-cms-api",
                "cloud/mdb/cms/api/cmd/mdb-cms-autoduty"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/cms/api/cmd/mdb-cms-api/mdb-cms-api"
            },
            "destination": {
                "path": "/opt/yandex/mdb-cms/bin/mdb-cms-api"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/cms/api/cmd/mdb-cms-autoduty/mdb-cms-autoduty"
            },
            "destination": {
                "path": "/opt/yandex/mdb-cms/bin/mdb-cms-autoduty"
            }
        }
    ]
}
