{
    "meta": {
        "name": "mdb-maintenance",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Implements 'Maintenance Window' feature",
        "version": "1.{revision}",
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/cloud/mdb/mdb-maintenance"
    },
    "build": {
        "bin": {
            "targets": [
                "cloud/mdb/mdb-maintenance/cmd/mdb-maintenance-sync"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-maintenance/cmd/mdb-maintenance-sync/mdb-maintenance-sync"
            },
            "destination": {
                "path": "/opt/yandex/mdb-maintenance/mdb-maintenance-sync"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/mdb-maintenance/configs",
                "files": [
                    "*.yaml"
                ]
            },
            "destination": {
                "path": "/etc/yandex/mdb-maintenance/configs/",
                "attributes": {
                    "mode": {
                        "value": "444",
                        "recursive": true
                    },
                    "owner": {
                        "value": "root",
                        "recursive": true
                    }
                }
            }
        }
    ]
}
