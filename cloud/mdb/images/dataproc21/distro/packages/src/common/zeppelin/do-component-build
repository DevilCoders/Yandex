set -ex

. `dirname $0`/bigtop.bom

BUILD_OPTS="-Pbuild-distr \
            -Pspark-3.2 \
            -Pspark-scala-2.12 \
            -Phadoop3"

if [ "$ZEPPELIN_RUN_TESTS" = "true" ]; then
  BUILD_OPTS="$BUILD_OPTS -DskipTests=false"
else
  BUILD_OPTS="$BUILD_OPTS -DskipTests"
fi

export MAVEN_OPTS="-Xmx1500m -Xms1500m"

mvn -B $BUILD_OPTS -pl '!rlang,!cassandra,!neo4j,!scalding,!sap,!pig,!ignite,!kylin,!cassandra,!bigquery,!alluxio,!hazelcastjet,!scio,!submarine,!beam,!elasticsearch' clean package

mkdir -p build/dist
tar -C build/dist --strip-components=1 -xzf zeppelin-distribution/target/zeppelin-*.tar.gz
