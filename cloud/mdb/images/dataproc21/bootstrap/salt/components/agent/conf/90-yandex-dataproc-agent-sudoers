# Yandex Cloud Data Proc rules for UI Proxy
# Allow user dataproc-agent to manage knox.service
dataproc-agent ALL=(ALL:ALL) NOPASSWD: /bin/systemctl status knox
dataproc-agent ALL=(ALL:ALL) NOPASSWD: /bin/systemctl start knox
dataproc-agent ALL=(ALL:ALL) NOPASSWD: /bin/systemctl stop knox
dataproc-agent ALL=(ALL:ALL) NOPASSWD: /bin/systemctl disable knox
dataproc-agent ALL=(ALL:ALL) NOPASSWD: /bin/systemctl enable knox

# Allow user dataproc-agent to run yarn commands as yarn user
dataproc-agent ALL=(ALL:ALL) NOPASSWD: /usr/bin/yarn
