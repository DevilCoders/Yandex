{
    "meta": {
        "name": "mdb-dns",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Service for smart update of DNS records",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/mdb-dns/cmd/mdb-dns"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-dns/cmd/mdb-dns/mdb-dns"
            },
            "destination": {
                "path": "/opt/yandex/mdb-dns/bin/mdb-dns"
            }
        }
    ]
}
