{
    "meta": {
        "name": "mdb-pgcheck",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Tool for changing PL/Proxy hosts behavior",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/mdb-pgcheck/cmd/mdb-pgcheck"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-pgcheck/cmd/mdb-pgcheck/mdb-pgcheck"
            },
            "destination": {
                "path": "/opt/yandex/mdb-pgcheck/bin/mdb-pgcheck"
            }
        }
    ]
}
