{
    "meta": {
        "name": "mdb-katan",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Auto deploy for MDB clusters",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/katan/imp/cmd/mdb-katan-imp",
                "cloud/mdb/katan/katan/cmd/mdb-katan",
                "cloud/mdb/katan/scheduler/cmd/mdb-katan-scheduler",
                "cloud/mdb/katan/scheduler/cmd/mdb-katan-cli",
                "cloud/mdb/katan/monitoring/cmd/mdb-katan-zombie-rollouts",
                "cloud/mdb/katan/monitoring/cmd/mdb-katan-broken-schedules"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/katan/imp/cmd/mdb-katan-imp/mdb-katan-imp"
            },
            "destination": {
                "path": "/opt/yandex/mdb-katan/bin/mdb-katan-imp"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/katan/katan/cmd/mdb-katan/mdb-katan"
            },
            "destination": {
                "path": "/opt/yandex/mdb-katan/bin/mdb-katan"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/katan/scheduler/cmd/mdb-katan-scheduler/mdb-katan-scheduler"
            },
            "destination": {
                "path": "/opt/yandex/mdb-katan/bin/mdb-katan-scheduler"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/katan/scheduler/cmd/mdb-katan-cli/mdb-katan-cli"
            },
            "destination": {
                "path": "/opt/yandex/mdb-katan/bin/mdb-katan-cli"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/katan/monitoring/cmd/mdb-katan-zombie-rollouts"
            },
            "destination": {
                "path": "/opt/yandex/mdb-katan/bin/mdb-katan-zombie-rollouts"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/katan/monitoring/cmd/mdb-katan-broken-schedules"
            },
            "destination": {
                "path": "/opt/yandex/mdb-katan/bin/mdb-katan-broken-schedules"
            }
        }
    ]
}
