{
    "meta": {
        "name": "mdb-my-toolkit",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Helper scripts for managing MySQL cluster",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/mdb-my-toolkit/cmd/my-resetup",
                "cloud/mdb/mdb-my-toolkit/cmd/my-autoflush-hosts",
                "cloud/mdb/mdb-my-toolkit/cmd/my-purge-binlogs",
                "cloud/mdb/mdb-my-toolkit/cmd/my-safe-flush-binlogs",
                "cloud/mdb/mdb-my-toolkit/cmd/my-wait-online",
                "cloud/mdb/mdb-my-toolkit/cmd/my-wait-started",
                "cloud/mdb/mdb-my-toolkit/cmd/my-wait-synced"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-resetup/my-resetup"
            },
            "destination": {
                "path": "/usr/local/bin/my-resetup"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-autoflush-hosts/my-autoflush-hosts"
            },
            "destination": {
                "path": "/usr/local/bin/my-autoflush-hosts"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-purge-binlogs/my-purge-binlogs"
            },
            "destination": {
                "path": "/usr/local/bin/my-purge-binlogs"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-safe-flush-binlogs/my-safe-flush-binlogs"
            },
            "destination": {
                "path": "/usr/local/bin/my-safe-flush-binlogs"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-wait-started/my-wait-started"
            },
            "destination": {
                "path": "/usr/local/bin/my-wait-started"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-wait-synced/my-wait-synced"
            },
            "destination": {
                "path": "/usr/local/bin/my-wait-synced"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-my-toolkit/cmd/my-wait-online/my-wait-online"
            },
            "destination": {
                "path": "/usr/local/bin/my-wait-online"
            }
        }
    ]
}
