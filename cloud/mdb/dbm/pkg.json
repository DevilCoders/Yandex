{
    "meta": {
        "name": "mdb-dbm",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Container management system for MDB",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/mdb/internal/development/dbm/",
        "conflicts": ["mdb-db-maintenance"],
        "provides": ["mdb-db-maintenance"]
    },
    "build": {
        "targets": [
            "cloud/mdb/dbm/uwsgi"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/dbm/uwsgi/dbm.wsgi"
            },
            "destination": {
                "path": "/opt/yandex/mdb-dbm/bin/dbm.wsgi"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/dbm/internal/static/img",
                "files": [
                    "*.png"
                ]
            },
            "destination": {
                "path": "/var/lib/yandex/dbm/static/img/",
                "attributes": {
                    "owner": {
                        "value": "root",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/dbm/internal/static/js",
                "files": [
                    "*.js"
                ]
            },
            "destination": {
                "path": "/var/lib/yandex/dbm/static/js/",
                "attributes": {
                    "owner": {
                        "value": "root",
                        "recursive": true
                    }
                }
            }
        }
    ]
}
