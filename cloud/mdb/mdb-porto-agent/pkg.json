{
    "meta": {
        "name": "mdb-porto-agent",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "A simple cli tool to work with the status of porto containers and their maintenance.",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/mdb-porto-agent/cmd/mdb-porto-agent"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-porto-agent/cmd/mdb-porto-agent/mdb-porto-agent"
            },
            "destination": {
                "path": "/usr/sbin/mdb-porto-agent"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/mdb-porto-agent/etc/cron.d/mdb-porto-agent"
            },
            "destination": {
                "path": "/etc/cron.d/mdb-porto-agent"
            }
        }
    ]
}
