{
    "meta": {
        "name": "mdb-pillar-config",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "Host config API for MDB service",
        "version": "1.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
        "bin": {
            "targets": [
                "cloud/mdb/mdb-pillar-config/cmd/mdb-pillar-config"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/mdb-pillar-config/cmd/mdb-pillar-config/mdb-pillar-config"
            },
            "destination": {
                "path": "/opt/yandex/mdb-pillar-config/mdb-pillar-config"
            }
        }
    ]
}
