{% set odyssey_user = salt['pillar.get']('data:odyssey:user', 'postgres') %}
/var/log/odyssey/odyssey*.log {
    start 0
    nodateext
    missingok
    rotate 10
    maxsize 128M
    daily
    compress
    notifempty
    delaycompress
    create 640 {{ odyssey_user }} {{ odyssey_user }}
    postrotate
        /usr/bin/killall -USR1 odyssey
    endscript
}
