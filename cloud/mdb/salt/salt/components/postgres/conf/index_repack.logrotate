    monthly
    create 0664 postgres postgres
    rotate 4
    copytruncate
    compress
    missingok
}

/var/log/pg_clear_after_repack.log {
    monthly
    create 0664 postgres postgres
    rotate 4
    copytruncate
    compress
    missingok
}
