monitor ALL, ALL = NOPASSWD: /sbin/iptables -t filter --list-rules *, \
                             /sbin/ip6tables -t filter --list-rules *
monitor ALL, ALL = NOPASSWD: /sbin/iptables --list *, \
                             /sbin/ip6tables --list *
monitor ALL, ALL = NOPASSWD: /sbin/iptables --list, \
                             /sbin/ip6tables --list
