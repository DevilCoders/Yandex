{% set zkflock_id = salt.mdb_clickhouse.backup_zkflock_id() %}
{% set zk_hosts = salt.mdb_clickhouse.zookeeper_hosts() %}
{% set config     = {
    "host": [],
    "timeout": 5,
    "app_id": zkflock_id,
    "logger": {
        "path": "/var/log/ch-backup/zkflock.log",
        "level": "INFO",
        "zklevel": "INFO"
    }
}
%}

{% for zk_host in zk_hosts %}
{%     do config["host"].append(zk_host + ":2181") %}
{% endfor %}

{{ config|json(indent=4) }}
