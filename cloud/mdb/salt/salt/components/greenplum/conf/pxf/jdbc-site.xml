<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!--Required properties-->
  <property>
    <name>jdbc.driver</name>
    <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.driver', 'driver_not_set') }}</value>
  </property>
  <property>
    <name>jdbc.url</name>
    <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.url', 'url_not_set') }}</value>
  </property>
  <property>
    <name>jdbc.user</name>
    <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.user', 'user_not_set') }}</value>
  </property>
  <property>
    <name>jdbc.password</name>
    <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.password', 'password_not_set') }}</value>
  </property>
  <!--Statement level properties-->
  <property>
     <name>jdbc.statement.batchSize</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.statement.batchsize', 100) }}</value>
  </property>
  <property>
     <name>jdbc.statement.fetchSize</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.statement.fetchsize', 1000) }}</value>
  </property>
  <property>
     <name>jdbc.statement.queryTimeout</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.statement.querytimeout', 60) }}</value>
  </property>
  <!--Connection pool properties-->
  <property>
     <name>jdbc.pool.enabled</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.pool.enabled', 'true') }}</value>
  </property>
  <property>
     <name>jdbc.pool.property.maximumPoolSize</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.pool.maximumpoolsize', 5) }}</value>
  </property>
  <property>
     <name>jdbc.pool.property.connectionTimeout</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.pool.connectiontimeout', 30000) }}</value>
  </property>
  <property>
     <name>jdbc.pool.property.idleTimeout</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.pool.idletimeout', 30000) }}</value>
  </property>
  <property>
     <name>jdbc.pool.property.minimumIdle</name>
     <value>{{ salt['pillar.get']('data:pxf:datasources:jdbc:'+datasource+':jdbc.pool.minimumidle', 0) }}</value>
  </property>
</configuration>
