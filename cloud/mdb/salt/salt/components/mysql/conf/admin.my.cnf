[client]
user = admin
password = {{ salt['pillar.get']('data:mysql:users:admin:password', '') }}
host = {{ salt['grains.get']('fqdn') }}
{% if salt['pillar.get']('pre_upgrade') %}
port = 3306
{% else %}
port = 3307
{% endif %}
{% if salt['pillar.get']('data:mysql:use_ssl', True) %}
ssl-mode = VERIFY_IDENTITY
ssl-ca = /etc/mysql/ssl/allCAs.pem
{% else %}
ssl-mode = DISABLED
{% endif %}
