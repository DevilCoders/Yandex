[client]
user = admin
password = {{ salt['pillar.get']('data:restore-from-pillar-data:mysql:users:admin:password', '') }}
# localhost, not FQDN, as old clusted had other FQDNs
host = 127.0.0.1
port = 3306
{% if salt['pillar.get']('data:mysql:use_ssl', True) %}
# Do NOT use VERIFY_IDENTITY here, as localhost domain is not signed, (VERIFY_CA not supported in go)
ssl-mode = REQUIRED
ssl-ca = /etc/mysql/ssl/allCAs.pem
{% else %}
ssl-mode = DISABLED
{% endif %}
