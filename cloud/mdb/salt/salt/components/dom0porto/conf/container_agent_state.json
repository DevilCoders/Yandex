{% set pillar_data = salt['pillar.get']('data:porto:' + container) -%}
{% set target_data = {'container_options': {'use_vlan688': salt['pillar.get']('data:use_vlan688', True)}} -%}
{% for key, value in pillar_data.items() -%}
{% if key != 'container_options' -%}
{%     do target_data.update({key: value}) -%}
{% else -%}
{%     do target_data.setdefault(key, {}) -%}
{%     for okey, ovalue in value.items() -%}
{%         if okey != 'secrets' -%}
{%             do target_data[key].update({okey: ovalue}) -%}
{%         endif -%}
{%     endfor -%}
{% endif -%}
{% endfor -%}
{{ target_data | json(indent=4) }}
