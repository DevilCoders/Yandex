*/5 * * * * root sleep $((RANDOM \% 120)); service atop status >/dev/null 2>&1 || (service atop restart; logger -p daemon.err "atop restarted") >/dev/null 2>&1
0 1 * * * root sleep $((RANDOM \% 3600)); (lsof -c atop | grep '(deleted)' | awk '{print $2};' | xargs -r kill) >/dev/null 2>&1
0 1 * * * root sleep $((RANDOM \% 3600)); killall -o 2d /usr/bin/atop >/dev/null 2>&1 || true
*/5 * * * * root [ `df --output=pcent / | tail -1 | sed -e 's/[^0-9]//g'` -lt 90 ] || find /var/log/atop -name 'atop_*' -size +1G -ctime +1 -delete
