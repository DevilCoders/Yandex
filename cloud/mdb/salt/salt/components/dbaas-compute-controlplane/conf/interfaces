auto lo
iface lo inet loopback
{# add data:network:l3_slb:virtual_ipv6 with your balancer's ip to your pillar if you need to use your own balancer #}
{% for slb_ip in salt['pillar.get']('data:network:l3_slb:virtual_ipv6') %}
    up /sbin/ip address add {{ slb_ip }} dev lo
{% endfor %}

auto eth0
iface eth0 inet6 dhcp
    accept_ra 1
