#/usr/bin/env make

ifndef DEBUG
	DEBUG=no
endif

ifndef DBUSER
	DBUSER=$(shell whoami)
endif

ifndef PROXY_DBNAME
	PROXY_DBNAME=s3proxy
endif

ifndef PROXY_HOST
	PROXY_HOST=localhost
endif

ifndef PROXY_FAKE_FILE
	PROXY_FAKE_FILE=tests/fake.sql
endif

ifndef DB01_DBNAME
	DB01_DBNAME=s3db01
endif

ifndef DB01_HOST
	DB01_HOST=localhost
endif

ifndef DB02_DBNAME
	DB02_DBNAME=s3db02
endif

ifndef DB02_HOST
	DB02_HOST=localhost
endif

ifndef META01_DBNAME
	META01_DBNAME=s3meta01
endif

ifndef META01_HOST
	META01_HOST=localhost
endif

ifndef META02_DBNAME
	META02_DBNAME=s3meta02
endif

ifndef META02_HOST
	META02_HOST=localhost
endif

ifndef PGMETA_HOST
    PGMETA_HOST=localhost
endif
ifndef PGMETA_DBNAME
    PGMETA_DBNAME=s3db
endif

DSN="host=$(PROXY_HOST) dbname=$(PROXY_DBNAME) user=$(DBUSER)"
