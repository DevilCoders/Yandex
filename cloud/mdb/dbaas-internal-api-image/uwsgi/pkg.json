{
    "meta": {
        "name": "dbaas-internal-api",
        "maintainer": "MDB <mdb@yandex-team.ru>",
        "description": "MDB internal API",
        "version": "2.{revision}",
        "homepage": "https://wiki.yandex-team.ru/MDB/"
    },
    "build": {
         "bin": {
            "targets": [
                "cloud/mdb/dbaas-internal-api-image/uwsgi",
                "cloud/mdb/dbaas-internal-api-image/reindexer/cmd/mdb-search-reindexer"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/dbaas-internal-api-image/uwsgi/internal-api.wsgi"
            },
            "destination": {
                "path": "/opt/yandex/dbaas-internal-api/bin/internal-api.wsgi"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "etc/uwsgi.ini"
            },
            "destination": {
                "path": "/opt/yandex/dbaas-internal-api/uwsgi.ini"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "build_key": "bin",
                "path": "cloud/mdb/dbaas-internal-api-image/reindexer/cmd/mdb-search-reindexer/mdb-search-reindexer"
            },
            "destination": {
                "path": "/opt/yandex/dbaas-internal-api/bin/mdb-search-reindexer"
            }
        }
    ]
}
