{
    "meta": {
        "name": "vpc-worker",
        "maintainer": "Data Cloud",
        "description": "VPC Service Worker",
        "version": "0.{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/mdb-vpc/cmd/mdb-vpc-worker"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/mdb-vpc/cmd/mdb-vpc-worker/mdb-vpc-worker"
            },
            "destination": {
                "path": "/build/mdb-vpc-worker"
            }
        }
    ]
}
