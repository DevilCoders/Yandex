{
    "meta": {
        "name": "deploy-api",
        "maintainer": "Data Cloud",
        "description": "Deploy API",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/deploy/api/cmd/mdb-deploy-api"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/deploy/api/cmd/mdb-deploy-api/mdb-deploy-api"
            },
            "destination": {
                "path": "/build/mdb-deploy-api"
            }
        }
    ]
}
