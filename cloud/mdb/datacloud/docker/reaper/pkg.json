{
  "meta": {
    "name": "reaper",
    "maintainer": "Data Cloud",
    "description": "Reaper",
    "version": "{revision}"
  },
  "build": {
    "targets": [
      "cloud/mdb/mdb-reaper/cmd/mdb-reaper"
    ],
    "target-platforms": [
      "linux"
    ]
  },
  "data": [
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "path": "cloud/mdb/mdb-reaper/cmd/mdb-reaper"
      },
      "destination": {
        "path": "/build/mdb-reaper"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    }
  ]
}
