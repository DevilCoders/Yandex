{
  "meta": {
    "name": "billing-sender",
    "maintainer": "Data Cloud",
    "description": "Billing sender to LogBroker/Kinesis",
    "version": "1.{svn_revision}"
  },
  "build": {
    "targets": [
      "cloud/mdb/billing/sender/cmd"
    ],
    "target-platforms": [
      "linux"
    ]
  },
  "data": [
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    },
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "path": "cloud/mdb/billing/sender/cmd"
      },
      "destination": {
        "path": "/build/sender"
      }
    }
  ]
}
