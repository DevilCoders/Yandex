{
    "meta": {
        "name": "backstagedb-migrations",
        "maintainer": "Data Cloud",
        "description": "Migrations for backstagedb",
        "version": "0.{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/internal/python/pg_create_users/bin",
            "contrib/python/yandex-pgmigrate/bin"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/internal/python/pg_create_users/bin/create_users"
            },
            "destination": {
                "path": "/build/create_users"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "contrib/python/yandex-pgmigrate/bin/pgmigrate"
            },
            "destination": {
                "path": "/build/pgmigrate"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/datacloud/docker/backstagedb-migrations/migrate.sh"
            },
            "destination": {
                "path": "/migrate.sh"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        }
    ]
}
