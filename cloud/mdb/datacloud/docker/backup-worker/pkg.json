{
  "meta": {
    "name": "backup-worker",
    "maintainer": "Data Cloud",
    "description": "Backup Service Worker",
    "version": "1.{svn_revision}"
  },
  "build": {
    "targets": [
      "cloud/mdb/backup/worker/cmd/worker"
    ],
    "target-platforms": [
      "linux"
    ]
  },
  "data": [
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    },
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "path": "cloud/mdb/backup/worker/cmd/worker/worker"
      },
      "destination": {
        "path": "/build/backup-worker"
      }
    }
  ]
}
