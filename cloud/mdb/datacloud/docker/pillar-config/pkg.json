{
    "meta": {
        "name": "pillar-config",
        "maintainer": "Data Cloud",
        "description": "Pillar Config",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/mdb-pillar-config/cmd/mdb-pillar-config"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/mdb-pillar-config/cmd/mdb-pillar-config/mdb-pillar-config"
            },
            "destination": {
                "path": "/build/mdb-pillar-config"
            }
        }
    ]
}
