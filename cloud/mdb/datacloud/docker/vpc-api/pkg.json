{
    "meta": {
        "name": "vpc-api",
        "maintainer": "Data Cloud",
        "description": "VPC Service API",
        "version": "0.{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/mdb-vpc/cmd/mdb-vpc-api"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/mdb-vpc/cmd/mdb-vpc-api/mdb-vpc-api"
            },
            "destination": {
                "path": "/build/mdb-vpc-api"
            }
        },
        {
            "source": {
                "type": "SANDBOX_RESOURCE",
                "id": 2257039314,
                "untar": false
            },
            "destination": {
                "path": "/build/grpc_health_probe",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        }
    ]
}
