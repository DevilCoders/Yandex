{
    "meta": {
        "name": "maintenance",
        "maintainer": "Data Cloud",
        "description": "Maintenance",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/mdb-maintenance/cmd/mdb-maintenance-sync"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/mdb-maintenance/cmd/mdb-maintenance-sync"
            },
            "destination": {
                "path": "/build/mdb-maintenance-sync"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/mdb-maintenance/configs",
                "files": [
                    "*.yaml"
                ]
            },
            "destination": {
                "path": "/configs/",
                "attributes": {
                    "mode": {
                        "value": "444",
                        "recursive": true
                    },
                    "owner": {
                        "value": "root",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        }
    ]
}
