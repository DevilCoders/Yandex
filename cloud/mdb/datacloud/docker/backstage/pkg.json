{
    "meta": {
        "name": "backstage",
        "maintainer": "Data Cloud",
        "description": "MDB Backstage",
        "version": "0.{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/backstage/bin/http",
            "cloud/mdb/backstage/bin/manage"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                 "path": "cloud/mdb/backstage/static"
            },
            "destination": {
                "path": "/build/static"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/backstage/bin/http/backstage-gunicorn"
            },
            "destination": {
                "path": "/build/gunicorn"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/backstage/bin/manage/backstage-manage"
            },
            "destination": {
                "path": "/build/manage"
            }
        }
    ]
}
