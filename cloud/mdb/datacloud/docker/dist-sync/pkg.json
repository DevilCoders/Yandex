{
    "meta": {
        "name": "dist-sync",
        "maintainer": "Data Cloud",
        "description": "dist.yandex.ru to AWS s3 syncing tool",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/datacloud/dist_sync/bin"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/datacloud/dist_sync/bin"
            },
            "destination": {
                "path": "/build/dist-sync"
            }
        }
    ]
}
