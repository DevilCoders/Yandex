{
    "meta": {
        "name": "deploy-salt",
        "maintainer": "Data Cloud",
        "description": "Deploy SaltMaster",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "cloud/mdb/deploy/saltkeys/cmd/mdb-deploy-saltkeys"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/mdb/deploy/saltkeys/cmd/mdb-deploy-saltkeys/mdb-deploy-saltkeys"
            },
            "destination": {
                "path": "/build/mdb-deploy-saltkeys"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/salt/salt/components/deploy/salt-master/conf/update_salt_image.py"
            },
            "destination": {
                "path": "/build/update_salt_image.py"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/mdb/salt/salt/components/deploy/salt-master/modules"
            },
            "destination": {
                "path": "/salt-master/modules"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "config"
            },
            "destination": {
                "path": "/config"
            }
        }
    ]
}
