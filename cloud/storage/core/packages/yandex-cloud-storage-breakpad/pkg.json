{
    "meta": {
        "name": "yandex-cloud-storage-breakpad",
        "version": "{sandbox_task_id}.{branch}",
        "description": "Package with Google Breakpad utils",
        "maintainer": "Cloud NBS <nbs-dev@yandex-team.ru>"
    },
    "build": {
        "targets": [
            "cloud/storage/core/tools/breakpad/launcher",
            "cloud/storage/core/tools/breakpad/sender"
        ]
    },
    "data": [
        {
            "source": {
                "path": "cloud/storage/core/tools/breakpad/sender",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/usr/bin/"
            }
        },
        {
            "source": {
                "path": "cloud/storage/core/tools/breakpad/launcher",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/usr/bin/"
            }
        },
        {
            "source" : {
                "type": "SANDBOX_RESOURCE",
                "id": "976687783"
            },
            "destination": {
                "path": "/usr/bin/minidump-2-core",
                "attributes": {
                    "mode": {
                        "value": "a+x"
                    }
                }
            }
        },
        {
            "source" : {
                "type": "SANDBOX_RESOURCE",
                "id": "976686287"
            },
            "destination": {
                "path": "/usr/lib/libbreakpad_init_nbs.so",
                "attributes": {
                    "mode": {
                        "value": "u+s"
                    }
                }
            }
        }
    ]
}
