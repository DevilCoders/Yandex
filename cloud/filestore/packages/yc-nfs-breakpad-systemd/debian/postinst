#!/bin/sh

set -e
case "$1" in
    configure)
        QUEUE_DIR=/var/tmp/breakpad-nfs
        mkdir -p "${QUEUE_DIR}" || :
        chown nfs "${QUEUE_DIR}" || :
        chmod 755 "${QUEUE_DIR}"  || :

        systemctl daemon-reload || :
        systemctl enable nfs-breakpad-sender.service || :
        systemctl restart nfs-breakpad-sender.service || :
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
