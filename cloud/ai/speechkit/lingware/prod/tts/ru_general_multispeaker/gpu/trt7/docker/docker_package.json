{
    "meta": {
        "version": "ru-cloud-general-{revision}",
        "maintainer": "Oleg Zheleznyak <jellysnack@yandex-team.ru>",
        "name": "tts-server",
        "description": "TTS server"
    },
    "build": {
        "targets": [
            "voicetech/asr/cloud_engine/server/tts/app",
            "cloud/ai/speechkit/lingware/prod/tts/ru_general_multispeaker/gpu/trt7/resources"
        ],
        "build_type": "release",
        "flags": [
            {
                "name": "CUDA_VERSION",
                "value": "11.4"
            },
            {
                "name": "TENSORRT_VERSION",
                "value": "7"
            },
            {
                "name": "CUDNN_VERSION",
                "value": "8.0.5"
            },
            {
                "name": "OS_SDK",
                "value": "ubuntu-16"
            }
        ]
    },
    "data": [
        {
            "source": {
                "path": "voicetech/asr/cloud_engine/server/tts/app",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/tts_server"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/ai/speechkit/lingware/prod/tts/ru_general_multispeaker/gpu/trt7/resources"
            },
            "destination": {
                "path": "/lingware"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/ai/speechkit/lingware/prod/tts/ru_general_multispeaker/gpu/trt7/resources",
                "files": [
                    "tts_server_config.json",
                    "resources_spec.json"
                ]
            },
            "destination": {
                "path": "/lingware/"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        }
    ]
}

