{
    "meta": {
        "version": "vtb-t4-{revision}",
        "maintainer": "Anton Ermilov <eranik@yandex-team.ru>",
        "name": "tts-server-onprem",
        "description": "TTS server onprem"
    },
    "build": {
        "targets": [
            "voicetech/asr/cloud_engine/server/tts/app_onprem",
            "cloud/ai/speechkit/lingware/prod/tts/multilang_cloud_general/gpu_trt7_t4/resources",
            "cloud/ai/speechkit/lingware/tools/tts/remove_speakers",
            "cloud/ai/speechkit/lingware/tools/tts/set_default_speaker"
        ],
        "build_type": "release",
        "flags": [
          {
            "name": "CUDA_VERSION",
            "value": "11.4"
          },
          {
            "name": "TENSORRT_VERSION",
            "value": "7"
          },
          {
            "name": "CUDNN_VERSION",
            "value": "8.0.5"
          },
          {
            "name": "OS_SDK",
            "value": "ubuntu-16"
          }
        ]
    },
    "data": [
        {
            "source": {
                "path": "voicetech/asr/cloud_engine/server/tts/app_onprem",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/tts_server"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/ai/speechkit/lingware/prod/tts/multilang_cloud_general/gpu_trt7_t4/resources"
            },
            "destination": {
                "path": "/lingware"
            }
        },
        {
            "source": {
                "path": "cloud/ai/speechkit/lingware/tools/tts/remove_speakers",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/remove_speakers"
            }
        },
        {
            "source": {
                "path": "cloud/ai/speechkit/lingware/tools/tts/set_default_speaker",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/set_default_speaker"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        }
    ]
}

