
<config>
    <serverconfig>
        <ip>0.0.0.0</ip>
        <accesslog>/var/log/asr/access.log</accesslog>
        <errorlog>/var/log/asr/error.log</errorlog>
        <syslog>voice-server.syslog</syslog>
        <loglevel>WARNING</loglevel>
        <workertype>thread</workertype>
        <maxconnection>500</maxconnection>
        <lingware>{MODEL}</lingware>
        <port>{PORT}</port>
        <reverse_normalizer>normalizer</reverse_normalizer>
        <decoder_type>BayesDecoder</decoder_type>
        <enable_yandex_cloud_streaming_graph>1</enable_yandex_cloud_streaming_graph>
        <partial_update_period>400</partial_update_period>
        <cpuLimit>false</cpuLimit>
        <gpu_required>1</gpu_required>
        <server_mode>{SERVER_MODE}</server_mode>
        <yaldi_system_config>{MODEL}/asr_system_config.json</yaldi_system_config>
    </serverconfig>
</config>