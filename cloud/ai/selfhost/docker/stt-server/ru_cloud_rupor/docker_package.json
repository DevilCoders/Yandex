{
  "meta": {
    "version": "ru-cloud-neuronet-{revision}",
    "maintainer": "Ershov Vasily <noxoomo@yandex-team.ru>",
    "name": "stt-server",
    "description": "ASR server"
  },
  "build": {
    "targets" : [
      "voicetech/asr/server"
    ]
  },
  "data": [
    {
      "source": {
        "path": "voicetech/asr/server/asr-server",
        "type": "BUILD_OUTPUT"
      },
      "destination": {
        "path": "/asr-server"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "asr-server.xml"
      },
      "destination": {
        "path": "/asr-server.xml"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "run.sh"
      },
      "destination": {
        "path": "/run.sh"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    }
  ]
}
