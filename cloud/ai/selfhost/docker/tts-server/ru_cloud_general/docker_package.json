{
    "meta": {
        "version": "ru-cloud-general-{revision}",
        "maintainer": "Oleg Zheleznyak <jellysnack@yandex-team.ru>",
        "name": "tts-server",
        "description": "TTS server"
    },
    "build": {
        "targets": [
            "voicetech/asr/cloud_engine/server/tts/app",
            "voicetech/asr/cloud_engine/lingware/tts/ru_cloud_general"
        ]
    },
    "data": [
        {
            "source": {
                "path": "voicetech/asr/cloud_engine/server/tts/app",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/tts_server"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "voicetech/asr/cloud_engine/lingware/tts/ru_cloud_general"
            },
            "destination": {
                "path": "/lingware"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "voicetech/asr/cloud_engine/lingware/tts/ru_cloud_general",
                "files": [
                    "tts_server_config.json",
                    "resources_spec.json"
                ]
            },
            "destination": {
                "path": "/lingware/"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        }
    ]
}

