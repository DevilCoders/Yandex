{
  "meta": {
    "version": "normalizer-service-{revision}",
    "maintainer": "Ermilov Anton <eranik@yandex-team.ru>",
    "name": "normalizer-service",
    "description": "Normalizer Service"
  },
  "build": {
    "targets" : [
      "cloud/ai/datasphere/lib/stt/metrics/python_package/normalizer",
      "cloud/ai/datasphere/lib/stt/metrics/python_package/normalizer/resources"
    ]
  },
  "data": [
    {
      "source": {
        "path": "cloud/ai/datasphere/lib/stt/metrics/python_package/normalizer/run_service",
        "type": "BUILD_OUTPUT"
      },
      "destination": {
        "path": "/run_service"
      }
    },
    {
      "source": {
        "path": "cloud/ai/datasphere/lib/stt/metrics/python_package/normalizer/resources/normalizer.tar.gz",
        "type": "BUILD_OUTPUT",
        "untar": true
      },
      "destination": {
        "path": "/"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "run.sh"
      },
      "destination": {
        "path": "/run.sh"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    }
  ]
}
