JAVA_HOME="/usr/lib/jvm/bellsoft-java17-runtime-amd64"
JAVA_OPTS="\
     \
    -Xmx512m \
    -Xms512m \
    -XX:+UnlockExperimentalVMOptions \
    -XX:+UseZGC \
    -XX:+DisableExplicitGC \
    -XX:MaxGCPauseMillis=300 \
    -XX:ConcGCThreads=1 \
    -XX:+CrashOnOutOfMemoryError \
    -XX:+HeapDumpOnOutOfMemoryError \
    -XX:HeapDumpPath=/var/lib/yc/token-service/ \
    -Djavax.net.ssl.trustStore=/etc/yc/token-service/truststore \
    -Djavax.net.ssl.trustStorePassword=changeit \
    -Djava.net.preferIPv6Addresses=true \
    -Djava.util.logging.manager=org.apache.logging.log4j.jul.LogManager \
    -Dlog4j2.asyncQueueFullPolicy=yandex.cloud.log.DiscardWithMeterAsyncQueueFullPolicy \
    -Dlog4j2.contextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector \
    -Dlog4j2.discardThreshold=OFF \
    -Dlog4j2.formatMsgNoLookups=true \
    -Dlogging.config=file:///etc/yc/token-service/log4j2.yaml \
    -Dlog4j2.configurationFile=file:///etc/yc/token-service/log4j2.yaml"
APPLICATION_YAML="/etc/yc/token-service/config.yaml"
