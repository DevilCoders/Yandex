{
    "meta": {
        "version": "{revision}.{branch}.{sandbox_task_id}",
        "maintainer": "yc dev tools <cloud-platform@yandex-team.ru>",
        "name": "yc-token-agent",
        "description": "deb package for yandex cloud token agent"
    },
    "data": [
        {
            "source": {
                "path": "yc-token-agent.service",
                "type": "RELATIVE"
            },
            "destination": {
                "path": "/lib/systemd/system/"
            }
        },
        {
            "source": {
                "path": "config.yaml.template",
                "type": "RELATIVE"
            },
            "destination": {
                "path": "/etc/yc/token-agent/"
            }
        },
        {
            "source": {
                "path": "cloud/iam/token_agent/daemon/yc-token-agent",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/usr/bin/"
            }
        },
        {
            "source": {
                "path": "cloud/iam/token_agent/bin/token-agent-init",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/usr/bin/"
            }
        }
    ],
    "build": {
        "add-result": [],
        "flags": [],
        "targets": [
            "cloud/iam/token_agent/bin",
            "cloud/iam/token_agent/daemon"
        ]
    }
}
