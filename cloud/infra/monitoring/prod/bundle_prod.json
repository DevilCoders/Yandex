{
    "meta": {
        "name": "cloud-infra-juggler-bundle",
        "maintainer": "hexyo@yandex-team.ru",
        "description": "Infrastructure Juggler checks for Yandex Cloud production hosts",
        "version": "{revision}"
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/checks",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/",
                "attributes": {
                    "mode": {
                        "value": "+x",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/configs",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/",
                "attributes": {
                    "mode": {
                        "value": "+x",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/lib",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/",
                "attributes": {
                    "mode": {
                        "value": "+x",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/prod",
                "files": [
                    "MANIFEST.json"
                ]
            },
            "destination": {
                "path": "/"
            }
        }
    ]
}