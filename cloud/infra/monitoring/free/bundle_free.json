{
    "meta": {
        "name": "cloud-infra-juggler-bundle",
        "maintainer": "hexyo@yandex-team.ru",
        "description": "Infrastructure Juggler checks for Yandex Cloud unused hosts",
        "version": "{revision}"
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/checks",
                "files": [
                    "META.sh",
                    "cpu_throt.py",
                    "dns_check.py",
                    "mounts.py",
                    "raid.py",
                    "reboot-count.py",
                    "tpm.py",
                    "walle_cpu_thermal.py",
                    "walle_disk.py",
                    "walle_fs_check.py",
                    "walle_gpu.py",
                    "walle_memory.py"
                ]
            },
            "destination": {
                "path": "/",
                "attributes": {
                    "mode": {
                        "value": "+x",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/lib",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/",
                "attributes": {
                    "mode": {
                        "value": "+x",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/monitoring/free",
                "files": [
                    "MANIFEST.json"
                ]
            },
            "destination": {
                "path": "/"
            }
        }
    ]
}