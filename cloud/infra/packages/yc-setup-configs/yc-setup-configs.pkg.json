{
    "meta": {
        "name": "yc-setup-configs",
        "maintainer": "Yc Infra <ycinfra@yandex-team.ru>",
        "description": "Package for base cloud system preparation",
        "version": "0.2-${context.target_revision.hash}",
        "homepage": "https://wiki.yandex-team.ru/cloud/infra/",
        "depends": ["yc-infra-lib"]
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/packages/yc-setup-configs/bin",
                "files": [
                    "isolate_cpu.py",
                    "manage_apt_repos.py",
                    "disk_topology.py",
                    "tpm_init.sh",
                    "huge_pages.py",
                    "env_options.py",
                    "configure_gpu.py"
                ]
            },
            "destination": {
                "path": "/usr/bin/"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/packages/yc-setup-configs/etc/profile.d",
                "files": [
                    "environment_data.yaml"
                ]
            },
            "destination": {
                "path": "/etc/profile.d/"
            }
        }
    ]
}
