{
    "meta": {
        "name": "yc-infra-juggler-hw-checks",
        "maintainer": "Yc Infra <ycinfra@yandex-team.ru>",
        "description": "YC Juggler checks for hardware",
        "version": "0.2-${context.target_revision.hash}",
        "homepage": "https://wiki.yandex-team.ru/cloud/infra/",
        "depends": ["yc-infra-lib"]
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/packages/monitoring/checks",
                "files": [
                    "META.sh",
                    "coredump_common.py",
                    "cpu_topology.py",
                    "dig.py",
                    "dns_check.py",
                    "fragile_disks.py",
                    "freespace.py",
                    "hw_watcher.py",
                    "packages_version.py",
                    "kikimr_disks.py",
                    "kikimr_disks_run.sh",
                    "kikimr.py",
                    "load_average.py",
                    "mounts.py",
                    "nic_health.py",
                    "ntp.py",
                    "oom-killer.py",
                    "ownerless_packages.py",
                    "pstore_is_empty.py",
                    "repo.py",
                    "raid.py",
                    "reboot-count.py",
                    "solomon-agent.py",
                    "tpm.py",
                    "unbound.py",
                    "vf_count.py",
                    "yc-infra-inspector"
                ]
            },
            "destination": {
                "path": "/home/monitor/agents/modules/infra/"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/packages/monitoring/lib",
                "files": [
                    "timeout_decorator.py",
                    "yc_monitoring.py"
                ]
            },
            "destination": {
                "path": "/home/monitor/agents/modules/infra/"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/packages/monitoring/configs",
                "files": [
                    "dig.conf",
                    "freespace.yaml",
                    "ownerless_packages.yaml",
                    "repositories_list.yaml"
                ]
            },
            "destination": {
                "path": "/var/lib/juggler-client/yc-monitors/infra/"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/infra/packages/monitoring/manifests/hw",
                "files": [
                    "MANIFEST.json"
                ]
            },
            "destination": {
                "path": "/var/lib/juggler-client/yc-monitors/infra/"
            }
        }
    ]
}
