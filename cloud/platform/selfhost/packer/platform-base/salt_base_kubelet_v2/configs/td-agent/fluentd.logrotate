/var/log/fluent/*.log {
  daily
  rotate 7
  compress
  nodelaycompress
  notifempty
  nocreate
  sharedscripts
  postrotate
    pid=/var/run/td-agent/td-agent.pid
    push_client_pid=/var/run/statbox/push-client.pid
    if [ -s "$pid" ]
    then
      kill -USR1 "$(cat $pid)"
    fi
    if [ -s $push_client_pid ]
    then
      kill -HUP "$(cat $push_client_pid)"
    fi
  endscript
}
