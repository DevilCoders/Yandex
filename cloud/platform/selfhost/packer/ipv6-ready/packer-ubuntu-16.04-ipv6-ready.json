{
  "variables": {
    "endpoint": "{{env `YC_ENDPOINT`}}",
    "service_account_key_file": "{{env `YC_SA_KEY_FILE`}}",
    "folder_id": "{{env `YC_FOLDER_ID`}}",
    "subnet_id": "{{env `YC_SUBNET_ID`}}"
  },
  "builders": [
    {
      "type":      "yandex",
      "endpoint":  "{{user `endpoint`}}",
      "service_account_key_file": "{{user `service_account_key_file`}}",
      "folder_id": "{{user `folder_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "zone":      "ru-central1-c",
      "labels": {
        "skip_update_ssh_keys":"true"
      },

      "image_name":   "ubuntu-1604-ipv6-ready-{{isotime | clean_resource_name}}",
      "image_family": "ubuntu-1604-ipv6-ready",
      "image_description": "based on file cloud/platform/selfhost/packer-ubuntu-16.04-ipv6-ready.json",

      "source_image_family": "ubuntu-1604-lts",
      "disk_type":           "network-hdd",
      "ssh_username":        "ubuntu",

      "use_ipv4_nat": false,
      "use_ipv6":     true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo {{ .Path }}",
      "script": "{{template_dir}}/../scripts/base.sh"
    },
    {
      "type": "shell",
      "inline": [
        "echo 'List installed packages and versions'",
        "dpkg -l"
      ]
    }
  ]
}
