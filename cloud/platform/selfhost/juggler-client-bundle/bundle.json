{
  "meta": {
    "name": "cloud-platform-juggler-check-bundle",
    "maintainer": "microcosm@yandex-team.ru",
    "description": "From this config check bundle can be build",
    "version": "{revision}"
  },
  "data": [
    {
      "source": {
        "type": "ARCADIA",
        "path": "cloud/platform/selfhost/juggler-client-bundle",
        "files": [
          "*.py",
          "*.sh"
        ]
      },
      "destination": {
        "path": "/",
        "attributes": {
          "mode": {
            "value": "+x",
            "recursive": true
          }
        }
      }
    },
    {
      "source": {
        "type": "ARCADIA",
        "path": "cloud/platform/selfhost/juggler-client-bundle",
        "files": [
          "MANIFEST.json",
          "platform-http-checks.json",
          "*.conf"
        ]
      },
      "destination": {
        "path": "/"
      }
    }
  ]
}
