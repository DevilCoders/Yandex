{
    "meta": {
        "name": "yandex-cloud-blockstore-server",
        "version": "{sandbox_task_id}.{branch}",
        "description": "Yandex Cloud BlockStore Server",
        "maintainer": "Cloud NBS <nbs-dev@yandex-team.ru>",
        "pre-depends": [
        ]
    },
    "build": {
        "targets": [
            "cloud/blockstore/daemon",
            "cloud/blockstore/client",
            "cloud/blockstore/tools/analytics/dump-event-log"
        ],
        "flags": [
            {
                "name": "HARDENING",
                "value": "yes"
            },
            {
                "name": "CFLAGS",
                "value": "-ggdb -fno-omit-frame-pointer -DNALF_FORCE_MALLOC_FREE"
            }
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "configure-and-start.sh"
            },
            "destination": {
                "path": "/configure-and-start.sh"
            }
        },
        {
            "source": {
                "path": "cloud/blockstore/daemon",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/"
            }
        },
        {
            "source": {
                "path": "cloud/blockstore/client",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/"
            }
        },
        {
            "source": {
                "path": "cloud/blockstore/tools/analytics/dump-event-log",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/"
            }
        }
    ]
}
