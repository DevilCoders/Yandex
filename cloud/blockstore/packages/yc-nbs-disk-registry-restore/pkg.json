{
    "meta": {
        "name": "yc-nbs-disk-registry-restore",
        "version": "latest",
        "description": "Yandex Cloud NBS DR Restore tools",
        "maintainer": "Cloud NBS <nbs-dev@yandex-team.ru>",
        "pre-depends": [
        ]
    },
    "build": {
        "targets": [
            "cloud/blockstore/client"
        ],
        "flags": [
            {
                "name": "HARDENING",
                "value": "yes"
            },
            {
                "name": "CFLAGS",
                "value": "-ggdb -fno-omit-frame-pointer -DNALF_FORCE_MALLOC_FREE"
            }
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "blockstore-dr-restore.sh"
            },
            "destination": {
                "path": "/tmp/blockstore-dr/usr/bin/blockstore-dr-restore.sh"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "path": "cloud/blockstore/client",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/tmp/blockstore-dr/usr/bin/"
            }
        }
    ]
}
