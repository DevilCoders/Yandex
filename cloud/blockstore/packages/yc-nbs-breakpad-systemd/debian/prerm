#!/bin/sh

set -e
case "$1" in
    remove|deconfigure)
        if [ -x /bin/systemctl ]; then
            systemctl stop nbs-breakpad-sender.service || :
        else
            stop nbs-breakpad-sender || :
        fi
        rm -rf "/var/tmp/breakpad" || :
        ;;

    failed-upgrade|upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
