#!/bin/bash

set -e

case "$1" in
	configure)

	if [ -f /Berkanavt/nbs-server/cfg/nbs_restart_on_deploy.conf ]; then
		service blockstore-http-proxy restart || true
	fi

	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
    ;;
esac

exit 0
