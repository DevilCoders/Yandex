{
    "meta": {
        "name": "yandex-cloud-blockstore-plugin",
        "version": "{sandbox_task_id}.{branch}",
        "description": "Yandex Cloud BlockStore Plugin",
        "maintainer": "Cloud NBS <nbs-dev@yandex-team.ru>",
        "pre-depends": [
        ]
    },
    "build": {
        "targets": [
            "cloud/vm/blockstore"
        ],
        "flags": [
            {
                "name": "HARDENING",
                "value": "yes"
            },
            {
                "name": "CFLAGS",
                "value": "-ggdb -fno-omit-frame-pointer -DNALF_FORCE_MALLOC_FREE"
            }
        ]
    },
    "data": [
        {
            "source": {
                "path": "cloud/vm/blockstore",
                "type": "BUILD_OUTPUT",
                "files": [
                    "*"
                ]
            },
            "destination": {
                "path": "/var/lib/nbs/"
            }
        },
        {
            "source": {
                "path": "etc/yc/nbs/client/client-default.txt",
                "type": "RELATIVE"
	        },
            "destination": {
	            "path": "/etc/yc/nbs/client/"
	        }
	    }
    ]
}
