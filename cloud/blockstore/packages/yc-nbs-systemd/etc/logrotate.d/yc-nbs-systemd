/var/log/nbs-server/nbs.log
{
        rotate 10
        create 644 syslog adm
        missingok
        daily
        ifempty
        compress
        sharedscripts
        postrotate
                /bin/systemctl kill -s HUP --kill-who=main rsyslog.service >/dev/null 2>&1 || true
        endscript
}

/var/log/nbs-server/nbs-profile.log
{
        rotate 3
        create 644 nbs nbs
        missingok
        daily
        ifempty
        maxsize 10G
        sharedscripts
        postrotate
                /bin/systemctl kill -s HUP --kill-who=main nbs.service >/dev/null 2>&1 || true
        endscript
}
