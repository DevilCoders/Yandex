{
    "meta": {
        "name": "yc-bootstrap-api",
        "version": "{revision}.{branch}",
        "description": "Yc Bootstrap Api",
        "maintainer": "Ilya Konev <kimkim@yandex-team.ru>"
    },
    "build": {
        "targets": [
            "cloud/bootstrap/api/bin/backend",
            "cloud/bootstrap/api/bin/helper"
        ],
        "flags": [
            {
                "name": "OS_SDK",
                "value": "ubuntu-16"
            }
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/bootstrap/api/bin/backend/bootstrap.api"
            },
            "destination": {
                "path": "/usr/bin/yc-bootstrap-api"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/bootstrap/api/bin/helper/bootstrap.api.helper"
            },
            "destination": {
                "path": "/usr/bin/yc-bootstrap-api-helper"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "data/etc/yc/bootstrap/api/config.yaml"
            },
            "destination": {
                "path": "/etc/yc/bootstrap/api/config.yaml"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "data/lib/systemd/system/yc-bootstrap-api.service"
            },
            "destination": {
                "path": "/lib/systemd/system/yc-bootstrap-api.service"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "data/etc/juggler/configs/yc-bootstrap-api/MANIFEST.json"
            },
            "destination": {
                "path": "/etc/juggler/configs/yc-bootstrap-api/MANIFEST.json"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "data/etc/logrotate.d/yc-bootstrap-api"
            },
            "destination": {
                "path": "/etc/logrotate.d/yc-bootstrap-api"
            }
        },
        {
            "source": {
                "type": "DIRECTORY"
            },
            "destination": {
                "path": "/var/log/yc/bootstrap/api"
            }
        }
    ]
}
