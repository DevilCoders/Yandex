{
    "meta": {
        "name": "yc-salt-operator",
        "maintainer": "Yc EngInfra Team <yc_selfhost@yandex-team.ru>",
        "description": "salt-operator for Kubernetes",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "cloud/bootstrap/k8s/salt-operator"
        ]
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/bootstrap/k8s/salt-operator/Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/bootstrap/k8s/salt-operator"
            },
            "destination": {
                "path": "/salt-operator-manager"
            }
        }
    ]
}
