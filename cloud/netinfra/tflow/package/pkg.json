{
    "meta": {
        "name": "tflow",
        "maintainer": "Anatoly Tsyganenko <atsygane@yandex-team.ru>",
        "description": "sFlow collector for cloud netinfra",
        "version": "0.{revision}.{branch}",
        "noconffiles_all": true
    },
    "build": {
            "targets": [
                "cloud/netinfra/tflow"
            ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/netinfra/tflow/tflow"
            },
            "destination": {
                "path": "/usr/bin/"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "../tflow.conf"
            },
            "destination": {
                "path": "/etc/tflow/"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "tflow.service"
            },
            "destination": {
                "path": "/lib/systemd/system/"
            }
        },
        {
            "source": {
                "type": "DIRECTORY"
            },
            "destination": {
                "path": "/var/log/tflow/"
            }
        }
    ]
}

