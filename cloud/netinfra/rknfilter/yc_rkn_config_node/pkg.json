{
    "meta": {
        "name": "yc-rkn-config-node",
        "maintainer": "Alexandr  Limonov <alex-limonov@yandex-team.ru>",
        "description": "Cloud RKN configuration management Node",
        "depends": ["bgpq3"],
        "version": "0.2.2"
    },
    "build": {
         "yc_rkn_config_node": {
            "targets": [
                "cloud/netinfra/rknfilter/yc_rkn_config_node"
            ]
        }
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
		        "build_key": "yc_rkn_config_node",
                "path": "cloud/netinfra/rknfilter/yc_rkn_config_node/yc-rkn-config-node"
            },
            "destination": {
                "path": "/usr/bin/yc-rkn-config-node"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "etc"
            },
            "destination": {
                "path": "/"
            }
        },
        {
            "source": {
                "type": "DIRECTORY"
            },
            "destination": {
                "path": "/var/opt/yc/rkn/config_node"
            }
        }
    ]
}