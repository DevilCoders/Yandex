  @{nbs_blk_plugin_BIN} mr,

  network inet6 tcp,

  # DNS configuration
  /etc/host.conf r,
  /etc/nsswitch.conf r,
  /etc/resolv.conf r,
  /run/resolvconf/resolv.conf r,
  /etc/gai.conf r,
  /etc/hosts r,

  # DNS over IPv6
  deny network inet udp,
  network inet6 udp,

  /proc/loadavg r,

  # That thing wants a PF_NETLINK socket with NETLINK_ROUTE. What for?
  deny network netlink,

  @{nbs_blk_plugin_LIBS} mr,
  # Not loaded by ld.so
  /lib/x86_64-linux-gnu/libnss_files-*.so mr,
  /lib/x86_64-linux-gnu/libnss_dns-*.so mr,

  @{nbs_blk_plugin_CLIENT_OPTS_FILE} r,
  @{nbs_blk_plugin_TOKEN_FILE} r,
