{
  "meta": {
    "name": "yc-salt-formula",
    "maintainer": "robot-zoidberg <robot-zoidberg@yandex-team.ru>",
    "description": "Salt formula for Yandex Cloud",
    "version": "0.1-{revision}.{branch}",
    "build-depends": [
      "debhelper (>= 9)",
      "python-jinja2",
      "pylint",
      "pylint3",
      "python-ipaddress"
    ],
    "homepage": "https://wiki.yandex-team.ru/cloud/devel"
  },
  "build": {
    "build_1": {
      "targets": [
        "cloud/salt-formula"
      ]
    }
  },
  "data": [
    {
      "source": {
        "type": "ARCADIA",
        "path": "cloud/salt-formula"
      },
      "destination": {
        "path": "/srv/salt"
      }
    }
  ]
}
