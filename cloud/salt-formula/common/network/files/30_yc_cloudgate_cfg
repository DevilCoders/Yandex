auto {{ data_dev }}
iface {{ data_dev }} inet manual
    pre-up /sbin/ip link set $IFACE up
    pre-down /sbin/ip link set $IFACE down

auto {{ inet_dev }}
iface {{ inet_dev }} inet manual
    pre-up /sbin/ip link set $IFACE up
    pre-down /sbin/ip link set $IFACE down

auto {{ inet6_dev }}
iface {{ inet6_dev }} inet6 manual
    pre-up /sbin/ip link set $IFACE up
    pre-down /sbin/ip link set $IFACE down
