/var/log/envoy/error.log
{
    daily
    create 644 root root
    maxsize 1024M
    rotate 168
    notifempty
    missingok
    compress
    delaycompress
    dateext
    dateformat -%Y%m%d-%s
    sharedscripts
    postrotate
        /bin/systemctl kill -s USR1 envoy.service >/dev/null 2>&1 || true
    endscript
}
