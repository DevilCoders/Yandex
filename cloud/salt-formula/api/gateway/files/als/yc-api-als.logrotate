/var/log/als/*.log
/var/log/envoy/access.log
/var/log/envoy/*.upstream.log
{
    daily
    create 644 yc-api-gateway yc-api-gateway
    maxsize 1024M
    rotate 168
    notifempty
    missingok
    compress
    delaycompress
    dateext
    dateformat -%Y%m%d-%s
    sharedscripts
    postrotate
        /bin/systemctl kill -s HUP yc-api-als.service >/dev/null 2>&1 || true
    endscript
}
