{%- set resource_manager = pillar.get('resource-manager') -%}
{%- set java_memory = resource_manager.config.max_memory -%}
JAVA_OPTS="-Xmx{{ java_memory }} -Xms{{ java_memory }} \
    -XX:+UnlockExperimentalVMOptions \
    -XX:+UseZGC \
    -XX:+DisableExplicitGC \
    -XX:MaxGCPauseMillis=300 \
    -XX:+CrashOnOutOfMemoryError \
    -XX:+HeapDumpOnOutOfMemoryError \
    -XX:HeapDumpPath=/var/lib/yc/resource-manager/ \
    -Dlog4j.configurationFile=file:///etc/yc/resource-manager/log4j2.yaml"
APPLICATION_YAML="/etc/yc/resource-manager/config.yaml"
