{%- set log_settings = salt['pillar.get']('oct:log_settings:defaults') -%}
/var/log/contrail/sandesh/sandesh-*.log {
    size {{ log_settings['file_size_mb'] }}M
    rotate {{ log_settings['files_count'] }}
    compress
    delaycompress
    # Do not use original log file
    copytruncate
    missingok
    notifempty
}
