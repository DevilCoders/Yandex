#!/usr/bin/env python
# -*-coding: utf-8 -*-
# vim: sw=4 ts=4 expandtab ai

"""Monitoring for OpenContrail vrouter-agent service"""

import introspect

HOST = introspect.DEFAULT_HOST
PORT = introspect.SUPPORTED_SERVICES['contrail-vrouter-agent']


def main():
    proc_status = introspect.get_procstatus(HOST, PORT)
    status, messages = introspect.get_contrail_service_status(
        proc_status, ignored_connections=['collector'], host=HOST, port=PORT)

    introspect.print_for_monitoring('contrail-vrouter-agent', status, messages)


if __name__ == '__main__':
    main()
