{
  "meta": {
    "name": "aw-magic",
    "maintainer": "AW <aw@yandex-team.ru>",
    "description": "Assembly Workshop packaging demo",
    "version": "2.{svn_revision}",
    "homepage": "https://wiki.yandex-team.ru/cloud/devel/assembly-workshop/welcome/#deb"
  },
  "build": {
    "bin": {
      "targets": [
        "cloud/assembly-workshop/magic"
      ]
    }
  },
  "data": [
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "build_key": "bin",
        "path": "cloud/assembly-workshop/magic/magic"
      },
      "destination": {
        "path": "/opt/yandex/aw/magic/magic"
      }
    },
    {
      "source": {
        "type": "ARCADIA",
        "path": "cloud/assembly-workshop/magic",
        "files": ["aw-magic.sh"]
      },
      "destination": {
        "path": "/opt/yandex/aw/magic/",
        "attributes": {
          "owner": {
            "value": "root"
          }
        }
      }
    },
    {
      "source": {
        "type": "SYMLINK"
      },
      "destination": {
        "target": "/opt/yandex/aw/magic/aw-magic.sh",
        "path": "/usr/bin/aw-magic"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    }
  ]
}
