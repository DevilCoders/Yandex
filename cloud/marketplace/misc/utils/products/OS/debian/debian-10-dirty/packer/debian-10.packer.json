{
  "variables": {
    "password": "randompass",
    "disk_size": "2500",
    "domain": ""
  },
  "builders": [
    {
      "name": "debian10",
      "type": "qemu",
      "format": "qcow2",
      "vnc_bind_address": "0.0.0.0",
      "disk_size": "{{ user `disk_size` }}",
      "disk_compression": true,
      "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.3.0-amd64-netinst.iso",
      "iso_checksum": "6a901b5abe43d88b39d627e1339d15507cc38f980036b928f835e0f0e957d3d8",
      "iso_checksum_type": "sha256",
      "http_directory": "http",

      "ssh_username": "root",
      "ssh_password": "{{ user `password` }}",
      "shutdown_command": "shutdown -h now",
      "ssh_wait_timeout": "2h",

      "use_default_display": true,
      "machine_type": "q35",
      "boot_wait": "5s",
      "boot_command": [
         "<esc><wait><wait>",
         "install ",

         "auto=true ",
         "priority=critical ",
         "interface=auto ",
	     "net.ifnames=0 ",
         "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
         "passwd/root-password=\"{{ user `password` }}\" passwd/root-password-again=\"{{ user `password` }}\" ",
         "<enter>"
      ],
      "qemuargs": [
        ["-parallel","none"],
        [ "-m", "1024M" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} bash '{{ .Path }}'",
      "pause_before": "20s",
      "scripts": [
        "scripts/cloud.sh"
      ]
    }
  ]
}
