{
    "variables": {
        "password": "testpassp",
        "disk_size": "2500",
        "domain": ""
    },

    "builders": [
        {
            "name": "debian8",

            "type": "qemu",
            "format": "qcow2",
            "disk_size": "{{ user `disk_size` }}",
            "disk_compression": true,

            "iso_url": "https://cdimage.debian.org/cdimage/archive/8.11.0/amd64/iso-cd/debian-8.11.0-amd64-netinst.iso",
            "iso_checksum": "ea799ed959d77359783e7922ed4c94a7437b083a4ce6f09e9fe41a7af6ba60df",
            "iso_checksum_type": "sha256",

            "http_directory": "http",

            "ssh_username": "root",
            "ssh_password": "{{ user `password` }}",
            "shutdown_command": "shutdown -h now",

            "ssh_wait_timeout": "60m",
            "use_default_display": true,
            "machine_type": "q35",

            "boot_wait": "5s",
            "boot_command": [
                   "<esc><wait><wait>",
                   "install ",

                   "auto=true ",
                   "priority=critical ",
		   "net.ifnames=0 ",
                   "interface=auto ",
                   "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",

                   "passwd/root-password=\"{{ user `password` }}\" passwd/root-password-again=\"{{ user `password` }}\" ",

                   "<enter>"
            ],
            
            "qemuargs": [
                   [ "-parallel", "none" ]
             ]
            

        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} bash '{{ .Path }}'",
            "pause_before": "20s",
            "scripts": [
                "scripts/update8.sh",
                "scripts/packages8.sh",
                "scripts/cloud8.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
