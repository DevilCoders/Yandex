{
    "variables": {
        "password": "packer",
        "disk_size": "5120"
    },

    "builders": [
        {
            "name": "opensuse-15.1",

            "type": "qemu",
            "format": "qcow2",
            "disk_size": "{{ user `disk_size` }}",
            "disk_compression": true,

            "iso_url": "https://download.opensuse.org/distribution/openSUSE-stable/iso/openSUSE-Leap-15.1-DVD-x86_64.iso",
            "iso_checksum": "c6d3ed19fe5cc25c4667bf0b46cc86aebcfbca3b0073aed0a288834600cb8b97",
            "iso_checksum_type": "sha256",

            "http_directory": "http",
            "shutdown_command": "shutdown -h now",

            "ssh_username": "root",
            "ssh_password": "{{ user `password` }}",

            "ssh_wait_timeout": "60m",
            "use_default_display": true,
            "machine_type": "q35",
	    "vnc_bind_address": "0.0.0.0",

            "boot_wait": "5s",
            "boot_command": [
                   "<esc><enter><wait>",
                   "linux ",
                   "net.ifnames=0 ",
                   "netdevice=eth0 ",
                   "netsetup=dhcp ",
                   "lang=en_US ",
                   "textmode=1 ",
                   "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/autoinst.xml ",
                   "<wait><enter><wait>"
            ],
            
            "qemuargs": [
                   [ "-parallel", "none" ],
                   [ "-m", "2048M" ]
             ]
            

        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} bash '{{ .Path }}'",
            "pause_before": "50s",
            "scripts": [
                "scripts/cloud.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
