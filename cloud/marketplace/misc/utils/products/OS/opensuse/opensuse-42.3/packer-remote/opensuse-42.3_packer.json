{
    "variables": {
        "password": "packer",
        "disk_size": "2150"
    },

    "builders": [
        {
            "name": "opensuse-42.3",

            "type": "qemu",
            "format": "qcow2",
            "disk_size": "{{ user `disk_size` }}",
            "disk_compression": true,

            "iso_url": "https://download.opensuse.org/distribution/leap/42.3/iso/openSUSE-Leap-42.3-DVD-x86_64.iso",
            "iso_checksum": "195baca6c5f3b7f3ad4d7984a7f7bd5c4a37be2eb67e58b65d07ac3a2b599e83",
            "iso_checksum_type": "sha256",

            "http_directory": "http",
            "shutdown_command": "systemctl poweroff",

            "ssh_username": "root",
            "ssh_password": "{{ user `password` }}",

            "ssh_wait_timeout": "60m",
            "use_default_display": true,
            "machine_type": "q35",

            "boot_wait": "5s",
            "boot_command": [
                   "<esc><enter><wait>",
                   "linux ",
                   "net.ifnames=0 ",
                   "netdevice=eth0 ",
                   "netsetup=dhcp ",
                   "lang=en_US ",
                   "textmode=1 ",
                   "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/autoinst.xml ",
                   "<wait><enter><wait>"
            ],
            
            "qemuargs": [
                   [ "-parallel", "none" ],
                   [ "-m", "2048M" ]
             ]
            

        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} bash '{{ .Path }}'",
            "pause_before": "50s",
            "scripts": [
                "scripts/cloud.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
