{
  "variables": {
    "password": "randompass",
    "disk_size": "2500",
    "domain": ""
  },
  "builders": [
    {
      "name": "Ubuntu2004",
      "type": "qemu",
      "format": "qcow2",
      "vnc_bind_address": "0.0.0.0",
      "disk_size": "{{ user `disk_size` }}",
      "disk_compression": true,
      "iso_url": "https://mirror.yandex.ru/ubuntu-cdimage/ubuntu-legacy-server/releases/20.04/release/ubuntu-20.04.1-legacy-server-amd64.iso",
      "iso_checksum": "f11bda2f2caed8f420802b59f382c25160b114ccc665dbac9c5046e7fceaced2",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "{{ user `password` }}",
      "shutdown_command": "shutdown -h now",
      "ssh_wait_timeout": "2h",
      "use_default_display": true,
      "machine_type": "q35",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "net.ifnames=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "<enter>"
      ],
      "qemuargs": [
        [
          "-parallel",
          "none"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{ .Vars }} bash '{{ .Path }}'",
      "pause_before": "20s",
      "scripts": [
        "scripts/cloud.sh"
      ]
    }
  ]
}
