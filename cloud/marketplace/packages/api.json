{
  "meta": {
    "name": "marketplace",
    "maintainer": "Alex Ilichev <rewle@yandex-team.ru>",
    "description": "YC Mkt Api",
    "version": "{branch}-{revision}",
    "target-platforms": [
      "DEFAULT-LINUX-X86_64"
    ]
  },
  "build": {
    "targets": [
      "cloud/marketplace/api/wsgi",
      "cloud/marketplace/cli/bin"
    ]
  },
  "data": [
    {
      "source": {
        "type": "RELATIVE",
        "path": "Dockerfile-api"
      },
      "destination": {
        "path": "/Dockerfile"
      }
    },
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "path": "cloud/marketplace/api/wsgi"
      },
      "destination": {
        "path": "/yc_marketplace"
      }
    },
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "path": "cloud/marketplace/cli/bin"
      },
      "destination": {
        "path": "/yc_marketplace_cli"
      }
    }
  ]
}
