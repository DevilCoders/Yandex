{
    "meta": {
        "name": "marketplace-lich",
        "maintainer": "Ya Cloud Marketplace team <yc-mkt-dev@yandex-team.ru>",
        "description": "License Check implementation",
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/cloud/marketplace/lich",
        "noconffiles_all": false
    },
    "include": [
        {
            "package": "cloud/marketplace/lich/deploy/license-check/pkg-version.json"
        }
    ],
    "build": {
        "build_type": "release",
        "targets": [
            "cloud/marketplace/lich/cmd/license-check"
        ],
        "target-platforms": [
            "DEFAULT-LINUX-X86_64"
        ],
        "flags": [
            {
                "name": "PACKAGE_VERSION",
                "value": "{package_version}"
            }
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "cloud/marketplace/lich/cmd/license-check"
            },
            "destination": {
                "path": "/cmd/license-check"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "INLINE",
                "content": "{branch}-r{revision}"
            },
            "destination": {
                "path": "/version.txt"
            }
        }
    ]
}
