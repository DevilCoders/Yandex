{
    "meta": {
        "name": "marketplace-cloud-logging",
        "maintainer": "Ya Cloud Marketplace team <yc-mkt-dev@yandex-team.ru>",
        "description": "Marketplace service log processor container",
        "homepage": "https://a.yandex-team.ru/arc/trunk/arcadia/cloud/marketplace/lich/deploy/fluentbit",
        "noconffiles_all": false
    },
    "include": [
        {
            "package": "cloud/marketplace/lich/deploy/license-check/pkg-version.json"
        }
    ],
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "config/fluent-bit.conf"
            },
            "destination": {
                "path": "/fluent-bit.conf"
            }
        },
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "INLINE",
                "content": "{branch}-r{revision}"
            },
            "destination": {
                "path": "/version.txt"
            }
        }
    ]
}
