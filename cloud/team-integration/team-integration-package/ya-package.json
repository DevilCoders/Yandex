{
    "meta": {
        "name": "yc-team-integration",
        "description": "YC Team Integration",
        "maintainer": "yc iam <cloud-iam@yandex-team.ru>",
        "version": "{revision}.{branch}.{sandbox_task_id}",
        "depends": [
            "java17-runtime"
        ]
    },
    "build": {
        "targets": [
            "cloud/team-integration/team-integration-package"
        ]
    },
    "data": [
        {
            "source": {
                "path": "cloud/team-integration/team-integration-package/team-integration-package.jar",
                "type": "BUILD_OUTPUT"
            },
            "destination": {
                "path": "/usr/share/yc/team-integration/lib/yc-team-integration.jar",
                "attributes": {
                    "mode": {
                        "value": "+r",
                        "recursive": true
                    }
                }
            }
        },
        {
            "source": {
                "path": "run.sh",
                "type": "RELATIVE"
            },
            "destination": {
                "path": "/usr/share/yc/team-integration/bin/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "path": "yc-team-integration.service",
                "type": "RELATIVE"
            },
            "destination": {
                "path": "/lib/systemd/system/"
            }
        }
    ]
}
