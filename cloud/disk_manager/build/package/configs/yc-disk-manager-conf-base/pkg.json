{
    "meta": {
        "maintainer": "Cloud NBS <nbs-dev@yandex-team.ru>",
        "version": "{sandbox_task_id}.{branch}"
    },
    "build": {
        "targets": []
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "cloud/disk_manager/configs/{userdata[cluster]}",
                "files": [
                    "*-config.txt"
                ]
            },
            "destination": {
                "path": "/etc/yc/disk-manager/"
            }
        },
        {
            "source": {
                "type": "INLINE",
                "content": "Revision: {sandbox_task_id} Version: \"{branch}\""
            },
            "destination": {
                "path": "/usr/lib/yc/disk-manager/config-version.txt"
            }
        }
    ]
}
