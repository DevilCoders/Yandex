{
  "meta": {
    "name": "jaeger-agent",
    "maintainer": "YC Tracinc <yc-tracing@yandex-team.ru>",
    "description": "Jaeger agent",
    "version": "{revision}.{branch}.{sandbox_task_id}",
    "homepage": "https://wiki.yandex-team.ru/cloud/devel/tracing/",
    "build-depends": [
      "debhelper (>= 8.0.0)"
    ],
    "depends": [
      "adduser",
      "systemd"
    ]
  },
  "build": {
    "bin": {
      "targets": [
        "vendor/github.com/jaegertracing/jaeger/cmd/agent"
      ]
    }
  },
  "data": [
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "build_key": "bin",
        "path": "vendor/github.com/jaegertracing/jaeger/cmd/agent/agent"
      },
      "destination": {
        "path": "/usr/local/bin/jaeger-agent"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "systemd/jaeger-agent.service"
      },
      "destination": {
        "path": "/usr/lib/systemd/system/"
      }
    },
    {
      "source": {
        "type": "DIRECTORY"
      },
      "destination": {
        "path": "/etc/jaeger",
        "attributes": {
          "mode": {
            "value": "a+rw"
          }
        }
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "config/preprod.yaml"
      },
      "destination": {
        "path": "/etc/jaeger/preprod.yaml"
      }
    },
    {
      "source": {
        "type": "RELATIVE",
        "path": "config/prod.yaml"
      },
      "destination": {
        "path": "/etc/jaeger/prod.yaml"
      }
    }
  ]
}
