#!/usr/bin/make -f
# -*- makefile -*-

%:
	dh $@ --with=systemd

override_dh_auto_test:
	@echo "no tests could be run during build"

override_dh_installinit:
	dh_installinit --no-start --no-restart-on-upgrade --name=yc-snapshot
	dh_installinit --no-start --no-restart-on-upgrade --name=yc-snapshot-gc

override_dh_systemd_start:
	dh_systemd_start --no-start --no-restart-on-upgrade --name=yc-snapshot
	dh_systemd_start --no-start --no-restart-on-upgrade --name=yc-snapshot-gc
