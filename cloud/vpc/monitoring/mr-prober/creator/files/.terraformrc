# See https://www.terraform.io/cli/config/config-file#provider-installation.
# All providers are mirrored to the filesystem via "terraform providers mirror" in Dockerfile.

plugin_cache_dir   = "/root/.terraform.d/plugins"

provider_installation {
  filesystem_mirror {
    path    = "/root/.terraform.d/plugins"
    include = ["registry.terraform.io/*/*"]
  }

  direct {
    exclude = ["registry.terraform.io/*/*"]
  }
}
